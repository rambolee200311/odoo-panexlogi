<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="form_label_required"
            name="FormLabel"
            inherit_id="web.FormLabel"
            xml:space="preserve">

    <!-- 使用Odoo原生必填判断变量 hasRequired -->
    <xpath expr="//label[contains(@class, 'o_form_label')]" position="attributes">
      <attribute name="class">o_form_label</attribute>
      <attribute name="t-if">hasRequired</attribute>
    </xpath>

    <!-- 在标签后追加星号 -->
    <xpath expr="//label[contains(@class, 'o_form_label')]" position="after">
      <span class="text-danger" t-if="hasRequired">*</span>
    </xpath>

  </template>
</odoo>