<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- window_action -->
    <record id="delivery_request_action" model="ir.actions.act_window">
        <field name="name">delivery.request.management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">panexlogi.delivery</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first one!
            </p>
        </field>
    </record>
    <!-- Email View -->
    <record id="email_delivery_template_inform_content" model="mail.template">
        <field name="name">Inform Content</field>
        <field name="model_id" ref="panexLogi.model_panexlogi_delivery"/>
        <field name="subject">Delivery Request Email</field>
        <field name="email_from">fallback@example.com</field>
        <field name="email_to">{{ object.inform_email_to or 'fallback@example.com' }}</field>
        <field name="body_html" type="html">
            <div>
                Please focus on: <t t-out="object.billno | default('')"/>  <br/><br/>
                Inform Content: <t t-out="object.inform_content | default('')"/> <br/><br/>
            </div>
            <div>
                <br/>Best Regards<br/><br/>
                <t t-out="user.name | default('')"/> <br/><br/>
                <img t-attf-src="/logo.png?company={{ user.company_id.id }}"
                     style="padding: 0px; margin: 0px; height: 48px;"
                     t-att-alt="user.company_id.name"/>
            </div>
        </field>
    </record>
    <!-- Map View
        <record id="view_delivery_quote_map" model="ir.ui.view">
            <field name="name">delivery.quote.map</field>
            <field name="model">panexlogi.delivery.quote</field>
            <field name="arch" type="xml">
                <map string="Delivery Quotes by Country" class="oe_google_map">
                    <field name="unload_country" type="geo"/>
                </map>
            </field>
        </record>
        -->
    <!-- Graph View -->
    <record id="view_delivery_request_graph" model="ir.ui.view">
        <field name="name">delivery.quote.graph</field>
        <field name="model">panexlogi.delivery</field>
        <field name="arch" type="xml">
            <graph string="Delivery Quotes by Country" type="pie">
                <field name="unload_country" type="row"/>
                <field name="id" type="measure" string="Count"/>
            </graph>
        </field>
    </record>

    <!-- Form View -->
    <record id="delivery_view_form" model="ir.ui.view">
        <field name="name">panexlogi.delivery.form</field>
        <field name="model">panexlogi.delivery</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <button name="action_confirm_order"
                            type="object"
                            string="Confirm"
                            invisible="state == 'confirm' or state == 'cancel' or state == 'order'"
                            class="btn-danger"/>
                     <button name="action_unconfirm_order"
                            type="object"
                            string="Unconfirm"
                            invisible="state == 'new' or state == 'cancel' or state == 'order'"
                            class="btn-primary"/>
                     <button name="action_cancel_order"
                            type="object"
                            string="Cancel"
                            invisible="state == 'confirm' or state == 'cancel' or state == 'order'"
                            class="btn-warning"/>
                     <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="new,confirm,order"/>
                     <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <!--<button name="add_delivery_status"
                                        type="object"
                                        string="Tracking"
                                        class="oe_stat_button" icon="fa-building"/>-->
                            <button name="open_batch_edit_wizard"
                                    string="Batch Edit Details"
                                    type="object"
                                    class="oe_stat_button" icon="fa-pencil"/>
                            <button name="action_create_delivery_cmr"
                                    type="object"
                                    string="Generate CMR"
                                    class="oe_stat_button" icon="fa-file"/>
                            <button name="action_create_delivery_order"
                                    type="object"
                                    string="Create Order"
                                    class="oe_stat_button" icon="fa-table"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            Delivery Request
                        </h1>
                        <h2>
                            <field name="billno"/>
                        </h2>
                    </div>
                    <group string="Request" col="2">
                        <group>
                            <field name="date" colspan="2" readonly="state!='new'"/>
                            <field name="project" readonly="state!='new'"/>
                        </group>
                        <group>
                            <field name="delivery_type" readonly="state!='new'"/>
                            <field name="remark"/>
                            <!--
                            <field name="adr" readonly="state!='new'"/>
                            <field name="loading_ref" readonly="state!='new'"/>
                            <field name="inner_ref" readonly="state!='new'"/>
                            <field name="load_type" string="Loading From" readonly="state!='new'"/>
                            <field name="load_warehouse" readonly="state!='new'"/>
                            <field name="load_terminal" readonly="state!='new'"/>
                            -->
                        </group>
                        <!--<<group>
                            <field name="pdffile" filename="pdffilename" widget="binary_filename"/>
                            <field name="pdffilename" invisible="True"/>
                            <field name="notes"/>
                        </group>-->
                    </group>
                    <group string="Inform" col="2">
                        <group>
                            <field name="need_inform"/>
                            <field name="inform_date"/>
                        </group>
                        <group>
                            <field name="inform_content"/>
                        </group>
                        <group>
                            <field name="inform_receiver" widget="many2many_tags"/>
                            <field name="inform_email_to"/>
                        </group>
                        <group>
                            <div class="oe_button_box" name="button_box">
                                <button name="send_delivery_emails"
                                                type="object"
                                                string="Inform"
                                                class="oe_stat_button" icon="fa-envelope"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail">
                            <field name="deliverydetatilids" readonly="state!='new'"/>
                        </page>
                       <!-- <page string="Address">
                            <group>
                                <group string="LOADING">
                                    <field name="loading_conditon" readonly="1"/>
                                    <field name="load_address" readonly="1"/>
                                    <field name="load_company_name" readonly="1"/>
                                    <field name="load_contact_phone" readonly="1"/>
                                    <field name="load_postcode" readonly="1"/>
                                    <field name="load_city" readonly="1"/>
                                    <field name="load_country" readonly="1"/>
                                    <field name="load_country_code" readonly="1"/>
                                    <field name="load_address_timeslot" readonly="1"/>
                                    <field name="planned_for_loading" readonly="1"/>
                                </group>
                                <group string="UNLOADING">
                                    <field name="unloading_conditon" readonly="1"/>
                                    <field name="unload_address" readonly="1"/>
                                    <field name="unload_company_name" readonly="1"/>
                                    <field name="unload_contact_phone" readonly="1"/>
                                    <field name="unload_postcode" readonly="1"/>
                                    <field name="unload_city" readonly="1"/>
                                    <field name="unload_country" readonly="1"/>
                                    <field name="unload_country_code" readonly="1"/>
                                    <field name="unload_address_timeslot" readonly="1"/>
                                    <field name="planned_for_unloading" readonly="1"/>
                                </group>
                            </group>
                        </page>-->
                        <page string="Quote">
                            <group string="Common" col="2">
                                <group>
                                    <field name="trucker"  readonly="state!='new'"/>
                                    <field name="quote" readonly="state!='new'"/>
                                    <field name="additional_cost" readonly="state!='new'"/>
                                    <field name="extra_cost" readonly="state!='new'"/>
                                </group>
                                <group>
                                    <field name="charged" readonly="state!='new'"/>
                                    <field name="profit" readonly="state!='new'"/>
                                </group>
                            </group>
                            <!--
                            <group string="Extra" col="2">
                                <group>
                                    <field name="extra_cost"/>
                                </group>
                                <group>
                                    <field name="notes"/>
                                </group>
                            </group>
                            -->
                        </page>
                        <!--<page string="Track">
                            <field name="deliverystatusids">
                                <tree>
                                    <field name="date" readonly="true"/>
                                    <field name="status" readonly="true"/>
                                    <field name="extra_cost" readonly="true"/>
                                    <field name="description" readonly="true"/>
                                </tree>
                            </field>
                        </page>-->
                        <page string="Quote Log">
                            <field name="deliveryquoteids">
                                <tree create="true" delete="false">
                                    <field name="date"/>
                                    <field name="trucker"/>
                                    <field name="quote"/>
                                    <field name="additional_cost"/>
                                    <field name="profit"/>
                                    <field name="remark"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Documents">
                            <field name="deliveryotherdocsids"/>
                        </page>
                        <page string="CMR">
                            <field name="delivery_detail_cmr_ids">
                                <tree create="false" delete="false">
                                    <field name="billno"/>
                                    <field name="loading_refs"/>
                                    <field name="consignee_refs"/>
                                    <field name="cntrnos"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <!--Search View-->
