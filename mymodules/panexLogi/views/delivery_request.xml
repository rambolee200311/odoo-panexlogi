<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- window_action -->
    <record id="delivery_request_action" model="ir.actions.act_window">
        <field name="name">delivery.request.management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">panexlogi.delivery</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first one!
            </p>
        </field>
    </record>
    <!-- Email View -->
    <record id="email_delivery_template_inform_content" model="mail.template">
        <field name="name">Inform Content</field>
        <field name="model_id" ref="panexLogi.model_panexlogi_delivery"/>
        <field name="subject">Delivery Request Email</field>
        <field name="email_from">fallback@example.com</field>
        <field name="email_to">{{ object.inform_email_to or 'fallback@example.com' }}</field>
        <field name="body_html" type="html">
            <div>
                Please focus on: <t t-out="object.billno | default('')"/>  <br/><br/>
                Inform Content: <t t-out="object.inform_content | default('')"/> <br/><br/>
            </div>
            <div>
                <br/>Best Regards<br/><br/>
                <t t-out="user.name | default('')"/> <br/><br/>
                <img t-attf-src="/logo.png?company={{ user.company_id.id }}"
                     style="padding: 0px; margin: 0px; height: 48px;"
                     t-att-alt="user.company_id.name"/>
            </div>
        </field>
    </record>
    <!-- Map View
        <record id="view_delivery_quote_map" model="ir.ui.view">
            <field name="name">delivery.quote.map</field>
            <field name="model">panexlogi.delivery.quote</field>
            <field name="arch" type="xml">
                <map string="Delivery Quotes by Country" class="oe_google_map">
                    <field name="unload_country" type="geo"/>
                </map>
            </field>
        </record>
        -->
        <!-- Graph View -->
        <record id="view_delivery_request_graph" model="ir.ui.view">
            <field name="name">delivery.quote.graph</field>
            <field name="model">panexlogi.delivery</field>
            <field name="arch" type="xml">
                <graph string="Delivery Quotes by Country" type="pie">
                    <field name="unload_country" type="row"/>
                    <field name="id" type="measure" string="Count"/>
                </graph>
            </field>
        </record>

    <!-- Form View -->
    <record id="delivery_view_form" model="ir.ui.view">
        <field name="name">panexlogi.delivery.form</field>
        <field name="model">panexlogi.delivery</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <button name="action_confirm_order"
                            type="object"
                            string="Confirm"
                            invisible="state == 'confirm' or state == 'cancel'"
                            class="btn-danger"/>
                     <button name="action_unconfirm_order"
                            type="object"
                            string="Unconfirm"
                            invisible="state == 'new' or state == 'cancel'"
                            class="btn-primary"/>
                     <button name="action_cancel_order"
                            type="object"
                            string="Cancel"
                            invisible="state == 'confirm' or state == 'cancel'"
                            class="btn-warning"/>
                     <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="new,confirm"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="add_delivery_status"
                                        type="object"
                                        string="Tracking"
                                        class="oe_stat_button" icon="fa-building"/>
                            <button name="send_delivery_emails"
                                        type="object"
                                        string="Inform"
                                        class="oe_stat_button" icon="fa-envelope"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            Delivery Request
                        </h1>
                        <h2>
                            <field name="billno"/>
                        </h2>
                    </div>
                    <group string="Request" col="2">
                        <group>
                            <field name="date" colspan="2" readonly="state!='new'"/>
                            <field name="project" readonly="state!='new'"/>
                            <field name="delivery_type" readonly="state!='new'"/>
                            <field name="adr" readonly="state!='new'"/>
                        </group>
                        <group>
                            <field name="loading_ref" readonly="state!='new'"/>
                            <field name="consignee_ref" readonly="state!='new'"/>
                            <field name="inner_ref" readonly="state!='new'"/>
                        </group>
                        <group>
                            <field name="pdffile" filename="pdffilename"/>
                            <field name="pdffilename" invisible="True"/>
                            <field name="notes"/>
                        </group>
                    </group>
                    <group string="Inform" col="2">
                        <group>
                            <field name="need_inform"/>
                            <field name="inform_date"/>
                        </group>
                        <group>
                            <field name="inform_content"/>
                        </group>
                        <group>
                            <field name="inform_receiver" widget="many2many_tags"/>
                            <field name="inform_email_to"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail">
                            <field name="deliverydetatilids" readonly="state!='new'"/>
                        </page>
                        <page string="Address">
                            <group>
                                <group string="LOADING">
                                    <field name="loading_conditon" readonly="state!='new'"/>
                                    <field name="load_address" readonly="state!='new'"/>
                                    <field name="load_company_name" readonly="state!='new'"/>
                                    <field name="load_contact_phone" readonly="state!='new'"/>
                                    <field name="load_postcode" readonly="state!='new'"/>
                                    <field name="load_country" readonly="state!='new'"/>
                                    <field name="load_country_code" readonly="state!='new'"/>
                                    <field name="load_address_timeslot" readonly="state!='new'"/>
                                    <field name="planned_for_loading" readonly="state!='new'"/>
                                </group>
                                <group string="UNLOADING">
                                    <field name="unloading_conditon" readonly="state!='new'"/>
                                    <field name="unload_address" readonly="state!='new'"/>
                                    <field name="unload_company_name" readonly="state!='new'"/>
                                    <field name="unload_contact_phone" readonly="state!='new'"/>
                                    <field name="unload_postcode" readonly="state!='new'"/>
                                    <field name="unload_country" readonly="state!='new'"/>
                                    <field name="unload_country_code" readonly="state!='new'"/>
                                    <field name="unload_address_timeslot" readonly="state!='new'"/>
                                    <field name="planned_for_unloading" readonly="state!='new'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Quote">
                            <group string="Common" col="2">
                                <group>
                                    <field name="trucker"  readonly="state!='new'"/>
                                    <field name="quote" readonly="state!='new'"/>
                                    <field name="additional_cost" readonly="state!='new'"/>
                                    <field name="extra_cost" readonly="state!='new'"/>
                                </group>
                                <group>
                                    <field name="charged" readonly="state!='new'"/>
                                    <field name="profit" readonly="state!='new'"/>
                                </group>
                            </group>
                            <!--
                            <group string="Extra" col="2">
                                <group>
                                    <field name="extra_cost"/>
                                </group>
                                <group>
                                    <field name="notes"/>
                                </group>
                            </group>
                            -->
                        </page>
                        <page string="Track">
                            <field name="deliverystatusids">
                                <tree>
                                    <field name="date" readonly="true"/>
                                    <field name="status" readonly="true"/>
                                    <field name="extra_cost" readonly="true"/>
                                    <field name="description" readonly="true"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Quote Log">
                            <field name="deliveryquoteids">
                                <tree create="true" delete="false">
                                    <field name="date"/>
                                    <field name="trucker"/>
                                    <field name="quote"/>
                                    <field name="additional_cost"/>
                                    <field name="profit"/>
                                    <field name="remark"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Documents">
                            <field name="deliveryotherdocsids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <!--Search View-->
        <record id="delivery_view_search" model="ir.ui.view">
            <field name="name">panexlogi.delivery.search</field>
            <field name="model">panexlogi.delivery</field>
            <field name="arch" type="xml">
                <search>
                    <field name="billno"/>
                    <field name="date"/>
                    <field name="project"/>
                    <field name="loading_ref"/>
                    <field name="consignee_ref"/>
                    <field name="load_address"/>
                    <field name="load_company_name"/>
                    <field name="load_contact_phone"/>
                    <field name="load_postcode"/>
                    <field name="load_country"/>
                    <field name="load_country_code"/>
                    <field name="load_address_timeslot"/>
                    <field name="unload_address"/>
                    <field name="unload_company_name"/>
                    <field name="unload_contact_phone"/>
                    <field name="unload_postcode"/>
                    <field name="unload_country"/>
                    <field name="unload_country_code"/>
                    <field name="unload_address_timeslot"/>
                    <field name="delivery_type"/>
                    <field name="loading_conditon"/>
                    <field name="unloading_conditon"/>
                    <field name="quote"/>
                    <field name="charged"/>
                    <field name="profit"/>
                    <field name="trucker"/>
                    <field name="planned_for_loading"/>
                    <field name="planned_for_unloading"/>
                </search>
            </field>
        </record>
    <!--Tree(List) View-->
    <record id="delivery_view_tree" model="ir.ui.view">
        <field name="name">delivery.tree</field>
        <field name="model">panexlogi.delivery</field>
        <field name="arch" type="xml">
            <tree create="true" delete="false">
                <field name="billno"/>
                <field name="date"/>
                <field name="project"/>
                <field name="load_address" string="load_address"/>
                <field name="unload_address" string="unload_address"/>
                <field name="trucker"/>
                <field name="planned_for_loading"/>
                <field name="planned_for_unloading"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>
    <!--wizard form-->
    <record id="view_class_add_delieverystatus_form" model="ir.ui.view">
        <field name="name">addelieverystatus</field>
        <field name="model">panexlogi.delivery.status.wizard</field>
        <field name="priority" eval="101"/>
        <field name="arch" type="xml">
            <form string="Quotation">
                <group>
                    <field name="date"/>
                    <field name="status"/>
                    <field name="extra_cost"/>
                    <field name="description"/>
                </group>
                <footer>
                    <button name="add_line" string="确认" type="object" class="btn-primary"/>
                    <button string="取消" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- otherdoc tree View -->
        <record id="view_tree_delivery_otherdocs" model="ir.ui.view">
            <field name="name">panexlogi.delivery.otherdocs.tree</field>
            <field name="model">panexlogi.delivery.otherdocs</field>
            <field name="arch" type="xml">
                <tree string="Other Documents">
                    <field name="description"/>
                    <field name="file"  filename="filename"/>
                    <field name="filename" invisible="True"/>
                    <!--<field name="waybill_billno"/>-->
                </tree>
            </field>
        </record>

        <!-- otherdoc form View -->
        <record id="view_form_delivery_otherdocs" model="ir.ui.view">
            <field name="name">panexlogi.delivery.otherdocs.form</field>
            <field name="model">panexlogi.delivery.otherdocs</field>
            <field name="arch" type="xml">
                <form string="Other Documents">
                    <sheet>
                        <group>
                            <field name="description"/>
                            <field name="file"  filename="filename"/>
                            <field name="filename" invisible="True"/>
                            <field name="billno"  readonly="True"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

</odoo>