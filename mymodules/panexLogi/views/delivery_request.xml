    <!--Tree(List) View-->
    <record id="delivery_view_tree" model="ir.ui.view">
        <field name="name">delivery.tree</field>
        <field name="model">panexlogi.delivery</field>
        <field name="arch" type="xml">
            <tree string="Delivery_Request" 
                  create="true" delete="false"
                  decoration-success="state=='confirm'" decoration-info="state=='new'" decoration-danger="state=='cancel'"
                  limit="50">
                <field name="billno"/>
                <field name="date" optional="show"/>
                <field name="project" optional="show"/>
                <field name="cntrno_list" optional="show"/>
                <field name="ref_list" optional="show"/>
                <field name="load_type" optional="show"/>
                <field name="delivery_type" optional="show"/>
               <!--
                <field name="adr" optional="show"/>
                <field name="load_warehouse" optional="show"/>
                <field name="load_terminal" optional="show"/>
                <field name="load_city" optional="show"/>
                <field name="loading_ref" optional="show"/>
                <field name="consignee_ref" optional="show"/>
                <field name="load_address" optional="show" string="load_address"/>
                <field name="load_company_name" optional="show"/>
                <field name="load_contact_phone" optional="show"/>
