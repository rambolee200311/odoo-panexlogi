    </record>
    <!--wizard form-->
    <record id="view_class_add_delieverystatus_form" model="ir.ui.view">
        <field name="name">addelieverystatus</field>
        <field name="model">panexlogi.delivery.status.wizard</field>
        <field name="priority" eval="101"/>
        <field name="arch" type="xml">
            <form string="Quotation">
                <group>
                    <field name="date"/>
                    <field name="status"/>
                    <field name="extra_cost"/>
                    <field name="description"/>
                </group>
                <footer>
                    <button name="add_line" string="确认" type="object" class="btn-primary"/>
                    <button string="取消" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- otherdoc tree View -->
    <record id="view_tree_delivery_otherdocs" model="ir.ui.view">
        <field name="name">panexlogi.delivery.otherdocs.tree</field>
        <field name="model">panexlogi.delivery.otherdocs</field>
        <field name="arch" type="xml">
            <tree string="Other Documents">
                <field name="description"/>
                <field name="file"  filename="filename" widget="binary_filename"/>
                <field name="filename" invisible="True"/>
                <!--<field name="waybill_billno"/>-->
            </tree>
        </field>
    </record>

    <!-- otherdoc form View -->
    <record id="view_form_delivery_otherdocs" model="ir.ui.view">
        <field name="name">panexlogi.delivery.otherdocs.form</field>
        <field name="model">panexlogi.delivery.otherdocs</field>
        <field name="arch" type="xml">
            <form string="Other Documents">
                <sheet>
                    <group>
                        <field name="description"/>
                        <field name="file"  filename="filename" widget="binary_filename"/>
                        <field name="filename" invisible="True"/>
                        <field name="billno"  readonly="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- delivery detail wizard form -->
    <record id="view_delivery_detail_wizard_form" model="ir.ui.view">
        <field name="name">delivery.detail.wizard.form</field>
        <field name="model">panexlogi.delivery.detail.wizard</field>
        <field name="arch" type="xml">
            <form __validate__="1">
                <group>
                    <field name="delivery_id" invisible="1"/>
                </group>
                <group>
                    <field name="is_merge" help="Merge multi details to a order"/>
                    <field name="detail_ids" context="{'tree_view_ref': 'panexLogi.view_delivery_detail_tree_wizard'}"
                      options="{'no_create': True}"/>
                </group>
                <footer>
                    <button string="Create Orders" type="object" name="action_create_orders" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Add list view for details selection -->
    <record id="view_delivery_detail_tree_wizard" model="ir.ui.view">
        <field name="name">delivery.detail.tree.wizard</field>
        <field name="model">panexlogi.delivery.detail</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" editable="bottom">
                <field name="loading_ref"/>
                <field name="cntrno"/>
                <field name="product"/>
                <field name="qty"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <!-- delivery detail batch edit wizard form -->
    <record id="view_delivery_detail_batch_edit_wizard" model="ir.ui.view">
        <field name="name">delivery.detail.batch.edit.wizard.form</field>
        <field name="model">panexlogi.delivery.detail.batch.edit.wizard</field>
        <field name="arch" type="xml">
            <form string="Batch Edit Delivery Details">
                <group>
                        <field name="delivery_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="detail_ids"
                               options="{'no_create': True}"
                               context="{'tree_view_ref': 'panexLogi.view_delivery_details_tree_wizard'}"/>
                    </group>
                <group col="2">
                    <group col="2" string="Loading">
                        <field name="loading_ref" string="reference"/>
                        <field name="load_condition" string="condition"/>
                        <field name="load_address" string="address"/>
                        <field name="load_date" string="date time"/>
                        <field name="load_timeslot" string="timeslot"/>
                    </group>
                    <group col="2" string="Unloading">
                        <field name="consignee_ref" string="reference"/>
                        <field name="unload_condition" string="condition"/>
                        <field name="unload_address" string="address"/>
                        <field name="unload_date" string="date time"/>
                        <field name="unload_timeslot" string="timeslot"/>
                    </group>
                </group>
                <footer>
                    <button string="Apply" type="object" name="apply_changes" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Delivery detail batch edit wizard action-->
    <record id="view_delivery_details_tree_wizard" model="ir.ui.view">
        <field name="name">delivery.reqyest.details.tree.wizard</field>
        <field name="model">panexlogi.delivery.detail</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" editable="bottom">
                <field name="cntrno"/>
                <field name="product"/>
                <field name="pallets"/>
                <field name="uncode"/>
            </tree>
        </field>
    </record>
    <!-- Delivery detail cmr-->
    <record id="view_delivery_detail_cmr_wizard_form" model="ir.ui.view">
        <field name="name">delivery.detail.cmr.wizard.form</field>
        <field name="model">panexlogi.delivery.detail.cmr.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Delivery Detail CMR">
                <group>
                    <field name="delivery_id" readonly="1"/>
                    <field name="detail_ids" context="{'tree_view_ref': 'panexLogi.view_delivery_detail_tree_wizard'}"
                      options="{'no_create': True}"/>
                    <field name="cmr_remark" widget="textarea"/>
                </group>
                <footer>
                    <button string="Create CMR" type="object" name="action_create_cmr" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Delivery detail cmr action-->
    <record id="action_delivery_detail_cmr_wizard" model="ir.actions.act_window">
        <field name="name">Create Delivery Detail CMR</field>
        <field name="res_model">panexlogi.delivery.detail.cmr.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_delivery_id': active_id}</field>
    </record>

    <!-- CMR Form View -->
    <record id="delivery_detail_cmr_view_form" model="ir.ui.view">
        <field name="name">panexlogi.delivery.detail.cmr.form</field>
        <field name="model">panexlogi.delivery.detail.cmr</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            invisible="state != 'new'"
                            class="oe_highlight"/>
                    <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            invisible="state == 'cancel'"
                            class="btn-danger"/>
                    <button name="action_unconfirm"
                            type="object"
                            string="Unconfirm"
                            invisible="state != 'confirm'"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,confirm,order"
                           statusbar_colors='{"confirm":"green", "order":"red"}'
                           optional="hide"/>
                    <widget name="web_ribbon" title="CANCEL"
                            bg_color="bg-danger" invisible="state!='cancel'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="billno" readonly="1"/></h1>
                    </div>

                    <group col="2">
                        <!-- Left Column -->
                        <group string="CMR Information">
                            <field name="delivery_id" options="{'no_open': True}" readonly="1"/>
                            <field name="loading_refs" readonly="1"/>
                            <field name="load_date" readonly="1"/>
                            <field name="consignee_refs" readonly="1"/>
                            <field name="unload_date" readonly="1"/>
                            <field name="cntrnos" readonly="1"/>
                        </group>

                        <!-- Right Column -->
                        <group string="Documents">
                            <field name="cmr_file" filename="cmr_filename"/>
                            <field name="cmr_filename" invisible="1"/>
                            <field name="cmr_remark"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Related Details">
                            <field name="delivery_detail_ids">
                                <tree create="false" delete="false">
                                    <field name="loading_ref"/>
                                    <field name="consignee_ref"/>
                                    <field name="cntrno"/>
                                    <field name="load_address"/>
                                    <field name="load_date"/>
                                    <field name="load_timeslot"/>
                                    <field name="unload_address"/>
                                    <field name="unload_date"/>
                                    <field name="unload_timeslot"/>
                                    <field name="product_name"/>
                                    <field name="model_type"/>
                                    <field name="pallets"/>
                                    <field name="qty"/>
                                    <field name="gross_weight"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CMR Tree View -->
    <record id="delivery_detail_cmr_view_tree" model="ir.ui.view">
        <field name="name">panexlogi.delivery.detail.cmr.tree</field>
        <field name="model">panexlogi.delivery.detail.cmr</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='confirm'"
                  decoration-danger="state=='cancel'"
                  create="true" delete="false">
                <field name="billno"/>
                <field name="delivery_id" optional="show"/>
                <field name="loading_refs"/>
                <field name="load_date"/>
                <field name="consignee_refs"/>
                <field name="unload_date"/>
                <field name="cntrnos"/>
                <field name="state" widget="badge"/>
                <field name="cmr_filename" invisible="1"/>
            </tree>
        </field>
    </record>

</odoo>