                <field name="unload_company_name" optional="show"/>
                <field name="unload_contact_phone" optional="show"/>
                <field name="unload_postcode" optional="show"/>
                <field name="unload_city" optional="show"/>
                <field name="unload_country" optional="show"/>
                <field name="unload_country_code" optional="show"/>
                <field name="unload_address_timeslot" optional="show"/>
                <field name="loading_conditon" optional="show" string="load_condition"/>
                <field name="unloading_conditon" optional="show" string="unload_condition"/>
                <field name="planned_for_loading" optional="show" string="load_plan"/>
                <field name="planned_for_unloading" optional="show" string="unload_plan"/>
