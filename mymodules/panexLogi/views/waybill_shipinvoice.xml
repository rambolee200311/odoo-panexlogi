<odoo>
<!-- Search for arrival notice -->
    <record id="waybill_shipinvoice_view_search" model="ir.ui.view">
        <field name="name">waybill.shipinvoice.search.view</field>
        <field name="model">panexlogi.waybill.shipinvoice</field>
        <field name="arch" type="xml">
            <search>
                <field name="billno"/>
                <field name="waybill_billno"/>
                <field name="invno"/>
                <field name="project"/>
                <field name="date"/>
                <field name="state"/>
<!--                <field name="shipping"/>-->
            </search>
        </field>
    </record>
<!--waybill kanban-->
    <record id="waybill_view_shipinvoice_kanban" model="ir.ui.view">
        <field name="name">waybill.shipinvoice.kanban</field>
        <field name="model">panexlogi.waybill.shipinvoice</field>
        <field name="arch" type="xml">
            <kanban>

                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}">
                            <div class="oe_dropdown_kanban">
                                <div class="oe_dropdown_toggle">
                                    <i class="fa fa-bars fa-lg"/>
                                    <ul class="oe_dropdown_menu">
                                        <li>
                                            <a type="edit">Edit</a>
                                        </li>
                                        <li>
                                            <ul class="oe_kanban_colorpicker" datafield="color"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                            <div t-attf-class="oe_kanban_content">
                                BillNo:
                                <field name="billno"/>
                                <br/>
                                B/L No:
                                <field name="waybill_billno"/>
                                <br/>
                                Invoice No（发票号）:
                                <field name="invno"/>
                                <br/>
                                Project:
                                <field name="project"/>
                                <br/>
                                Start date:
                                <field name="date"/>
                                <br/>
                                State:
                                <field name="state"/>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>
<!--    arrival notice tree-->
    <record id="panexlogi_waybill_shipinvoice_tree" model="ir.ui.view">
        <field name="name">panexlogi.waybill.shipinvoice.tree</field>
        <field name="model">panexlogi.waybill.shipinvoice</field>
        <field name="arch" type="xml">
            <tree string="Ship_invoce_Tree" decoration-success="state=='confirm'" decoration-info="state=='new'"  decoration-danger="state=='cancel'">
                <field name="billno"/>
                <field name="waybill_billno"/>
                <field name="invno"/>
                <field name="date"/>
                <field name="due_date"/>
                <field name="payee"/>
                <field name="project"/>
                <field name="usdtotal"/>
                <field name="eurtotal"/>
                <field name="pdffile" filename="pdffilename"/>
                <field name="pdffilename" invisible="True"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
<!--    arrival notice calendar-->
    <record id="ship_invoice_view_calendar" model="ir.ui.view">
        <field name="name">ship.invoice.calendar</field>
        <field name="model">panexlogi.waybill.shipinvoice</field>
        <field name="arch" type="xml">
            <calendar string="Session Calendar"
                      date_start="date" date_stop="date"
                      color="color" mode="month">
                <field name="billno"/>
                <field name="waybill_billno"/>
                <field name="invno"/>
            </calendar>
        </field>
    </record>
<!--    arrival notice form-->
    <record id="panexlogi_waybill_shipinvoice_form" model="ir.ui.view">
        <field name="name">panexlogi.waybill.shipinvoice.form</field>
        <field name="model">panexlogi.waybill.shipinvoice</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <button name="action_confirm_order"
                            type="object"
                            string="Confirm"
                            invisible="state == 'confirm' or state == 'cancel' or state == 'apply'"
                            class="btn-danger"/>
                     <button name="action_unconfirm_order"
                            type="object"
                            string="Unconfirm"
                            invisible="state == 'new' or state == 'cancel' or state == 'apply'"
                            class="btn-primary"/>
                     <button name="action_cancel_order"
                            type="object"
                            string="Cancel"
                            invisible="state == 'confirm' or state == 'cancel' or state == 'apply'"
                            class="btn-warning"/>
                     <button name="create_payment_application"
                            type="object"
                            string="Apply Pay"
                            invisible="state == 'new' or state == 'cancel' or state == 'apply'"
                            class="btn-primary"/>
                     <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="new,confirm,apply"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Shipping Invoice
                        </h1>
                        <h2>
                            <field name="billno"/>
                        </h2>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button name="create_payment_application"
                                type="object"
                                string="Apply Payment"
                                class="oe_stat_button" icon="fa-money"/>
                    </div>
                    <group col="2">
                        <group col="2">
                            <field name="payee" readonly="state!='new'"/>
                            <field name="project" readonly="state!='new'"/>
                            <field name="date" readonly="state!='new'"/>
                            <field name="due_date" readonly="state!='new'"/>
                            <field name="invno" readonly="state!='new'"/>
                        </group>
                        <group col="2">
                            <field name="usdtotal" readonly="state!='new'"/>
                            <field name="eurtotal" readonly="state!='new'"/>
                            <field name="pdffile" filename="pdffilename" readonly="state!='new'"/>
                            <field name="pdffilename" invisible="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="waybillshipinvoicedetail_ids" readonly="state!='new'">
                                <tree string="Lines" editable="bottom">
                                    <field name="fitem"/>
                                    <field name="fitem_name"/>
                                    <field name="amount"/>
                                    <field name="amount_usd"/>
                                    <field name="remark"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
 <!-- action -->
    <record id="waybill_shipinvoice_action" model="ir.actions.act_window">
        <field name="name">Shipping Invoice</field>
        <field name="res_model">panexlogi.waybill.shipinvoice</field>
        <field name="view_mode">kanban,calendar,tree,form</field>
    </record>

</odoo>