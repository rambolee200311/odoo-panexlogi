<odoo>
    <!--        Import Payment Application search-->
    <record id="view_waybill_payment_application_search" model="ir.ui.view">
        <field name="name">panexlogi.finance.waybill.paymentapplication.search</field>
        <field name="model">panexlogi.finance.paymentapplication</field>
        <field name="arch" type="xml">
            <search>
                <field name="billno"/>
                <field name="type"/>
                <field name="waybill_billno"/>
                <field name="payee"/>
                <field name="invoiceno"/>
                <field name="invoice_date"/>
                <field name="due_date"/>
                <field name="date"/>
                <field name="total_amount"/>
                <field name="total_amount_usd"/>
                <field name="remark"/>
                <field name="state"/>
                <field name="source"/>
                <field name="source_Code"/>
                <filter string="Waybill" name="filter_waybill" domain="[('type', 'in', ['import', 'export', 'other',False])]"  context="{'default_type': 'import'}"/>
                <filter string="MyWaybill" name="filter_mywaybill" domain="[('type', 'in', ['import', 'export', 'other',False]),('create_uid', '=', uid)]"  context="{'default_type': 'mywaybill'}"/>
            </search>
        </field>
    </record>
    <!--        Import Payment Application tree-->
        <record id="import_payment_application_tree_view" model="ir.ui.view">
            <field name="name">panexlogi.finance.paymentapplication.tree.view</field>
            <field name="model">panexlogi.finance.paymentapplication</field>
            <field name="arch" type="xml">
                <tree string="Waybill_Application_Tree"
                      decoration-success="state=='confirm'" decoration-info="state=='new'"  decoration-danger="state=='paid'"
                      limit="50">
                    <header>
                        <!-- Add a button to create a payment from selected records -->
                        <button string="Create Payment" type="object" name="action_create_payment_from_selected" class="btn-primary"/>
                    </header>
                    <field name="billno" optional="show"/>
                    <field name="type" optional="show"/>
                    <field name="waybill_billno" optional="show"/>
                    <field name="payee" optional="show"/>
                    <field name="invoiceno" optional="show"/>
                    <field name="invoice_date" optional="show"/>
                    <field name="due_date" optional="show"/>
                    <field name="date" optional="show"/>
                    <field name="total_amount" optional="show" sum="Page Total: %s"/>
                    <field name="total_amount_usd" optional="show" sum="Page Total: %s"/>
                    <field name="remark" optional="show"/>
                    <field name="pdffile" filename="pdffilename" widget="binary_filename" optional="show"/>
                    <field name="pdffilename" invisible="True" optional="show"/>
                    <field name="source" optional="show"/>
                    <field name="source_Code" optional="show"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>
<!--        Import Payment Application form-->
        <record id="import_payment_application_form_view" model='ir.ui.view'>
            <field name="name">panexlogi.finance.paymentapplication.form.view</field>
            <field name="model">panexlogi.finance.paymentapplication</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                         <button name="action_confirm_order"
                                type="object"
                                string="Confirm"
                                invisible="state == 'confirm' or state == 'paid' or state == 'cancel'"
                                class="btn-danger"/>
                         <button name="action_unconfirm_order"
                                type="object"
                                string="Unconfirm"
                                invisible="state == 'new' or state == 'paid' or state == 'cancel'"
                                class="btn-primary"/>
                         <!--
                         <button name="action_paid_order"
                                type="object"
                                string="Paid"
                                invisible="state == 'new' or state == 'paid' or state == 'cancel'"
                                class="btn-danger"/>
                         <button name="action_unpaid_order"
                                type="object"
                                string="Unpaid"
                                invisible="state == 'new' or state == 'confirm' or state == 'cancel'"
                                class="btn-primary"/>
                         -->
                         <button name="action_cancel_order"
                                type="object"
                                string="Cancel"
                                invisible="state == 'confirm' or state == 'paid' or state == 'cancel'"
                                class="btn-warning"/>
                         <field
                                name="state"
                                widget="statusbar"
                                statusbar_visible="new,confirm,paid"/>
                        <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                     </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                Waybill Payment Application
                            </h1>
                            <h2>
                                <field name="billno"/>
                            </h2>
                        </div>
                        <group col="2">
                            <group string="General" col="2">
                                <field name="date"  readonly="state!='new'"/>
                                <field name="type"/>
                                <field name="waybill_billno" readonly="state!='new'"/>
                                <field name="payee" readonly="state!='new'"/>
                                <field name="total_amount" readonly="state!='new'"/>
                                <field name="total_amount_usd" readonly="state!='new'"/>
                                <field name="source"/>
                                <field name="source_Code"/>
                                <field name="shipinvoice_id" invisible="source!='Shipping Invoice'"/>
                                <field name="clearinvoice_id" invisible="source!='Clearance Invoice'"/>
                            </group>
                            <group string="Other" col="2">
                                <field name="invoiceno" readonly="state!='new'"/>
                                <field name="invoice_date" readonly="state!='new'"/>
                                <field name="due_date" readonly="state!='new'"/>
                                <field name="remark" readonly="state!='new'"/>
                                <field name="pdffile"  filename="pdffilename"  widget="binary_filename"/>
                                <field name="pdffilename" invisible="True"/>
                                <field name="payment_id" readonly="state!='new'"/>
                            </group>
                        </group>
                        <notebook string="Details">
                            <page string="Lines">
                                <field name="paymentapplicationline_ids" readonly="state!='new'">
                                    <tree editable="bottom">
                                        <field name="billno"/>
                                        <field name="project"/>
                                        <field name="fitem"/>
                                        <field name="fitem_name"/>
                                        <field name="amount"/>
                                        <field name="remark"/>
                                        <field name="pdffile" filename="pdffilename" widget="binary_filename"/>
                                        <field name="pdffilename" invisible="True"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="DeepSeek Check">
                                <header>
                                    <button name="action_deepseek_check"
                                                type="object"
                                                string="Run DeepSeek Check"
                                                class="btn-primary"
                                                />
                                </header>
                                <group col="2">
                                    <field name="check_status" readonly="1"/>
                                    <field name="risk_level" readonly="1"/>
                                    <field name="check_time_begin" readonly="1"/>
                                    <field name="check_duration" readonly="1"/>
                                    <field name="check_result" readonly="1" colspan="2" nolabel="1" style="width:100%; height:200px;"/>
                                </group>
                            </page>
                                
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>



<!--        Import Payment Application action-->
        <record id="import_payapp_action" model="ir.actions.act_window">
            <field name="name">Waybill Application</field>
            <field name="res_model">panexlogi.finance.paymentapplication</field>
            <field name="context">{'default_type':'import'}</field>
            <field name="search_view_id" ref="view_waybill_payment_application_search"/> <!-- Set default search view -->
            <field name="domain">[('type','in',['import','export','other',False])]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5,0,0),
                                      (0,0,{'view_mode': 'tree','view_id': ref('import_payment_application_tree_view')}),
                                      (0,0,{'view_mode': 'form','view_id': ref('import_payment_application_form_view')})]"/>
        </record>
</odoo>