<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_ar_receive_pie" model="ir.ui.view">
            <field name="name">ar.receive.pie</field>
            <field name="model">panexlogi.ar.receive</field>
            <field name="arch" type="xml">
                <graph string="AR Receive Distribution" type="pie">
                    <field name="payer" type="row" string="Customer"/>
                    <field name="receive_amount" type="measure" string="Amount"/>
                </graph>
            </field>
        </record>
        <record id="view_ar_receive_dashboard" model="ir.ui.view">
            <field name="name">ar.receive.dashboard</field>
            <field name="model">panexlogi.ar.receive</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <field name="billno"/>
                                    <field name="payer" string="Customer"/>
                                    <field name="receive_date"/>
                                    <field name="receive_amount"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                    <graph string="AR Receive by Customer" type="pie">
                        <field name="payer" type="row" string="Customer"/>
                        <field name="receive_amount" type="measure" string="Amount"/>
                    </graph>
                    <graph string="AR Receive by Month" type="bar">
                        <field name="receive_date" type="row" interval="month" string="Month"/>
                        <field name="receive_amount" type="measure" string="Amount"/>
                    </graph>
                </kanban>
            </field>
        </record>
        <!-- Tree View -->
        <record id="view_ar_receive_tree" model="ir.ui.view">
            <field name="name">ar.receive.tree</field>
            <field name="model">panexlogi.ar.receive</field>
            <field name="arch" type="xml">
                <tree limit="50">
                    <field name="billno" optional="show"/>
                    <field name="receive_date" optional="show"/>
                    <field name="invoice_number" optional="show"/>
                    <field name="payer" optional="show"/>
                    <field name="payer_account_partner" optional="show" string="Payer Account"/>
                    <field name="payer_account_number" optional="show" string="Payer IBAN"/>
                    <field name="payer_bank_bic" optional="show" string="Payer BIC"/>
                    <field name="payee_company"  optional="show"/>
                    <field name="payee_company_account" optional="show"  string="Payee Account"/>
                    <field name="payee_account"  optional="show" string="Payee IBAN"/>
                    <field name="payee_bank" optional="show" string="Payee BIC"/>
                    <field name="payment_method" optional="show"/>
                    <field name="currency_id" optional="show"/>
                    <field name="receive_amount" optional="show" sum="Page Total: %s"/>
                    <field name="cost" optional="show" sum="Page Total: %s"/>
                    <field name="pdffile" widget="binary_filename" filename="pdffilename" optional="show"/>
                    <field name="pdffilename" optional="show"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>
