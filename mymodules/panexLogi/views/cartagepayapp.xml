<!--        cartage Payment Application action-->
        <record id="cartage_payapp_action" model="ir.actions.act_window">
            <field name="name">Cartage Payment App</field>
            <field name="res_model">panexlogi.finance.paymentapplication</field>
            <field name="context">{'default_type':'cartage'}</field>
            <field name="domain">[('type','=','cartage')]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5,0,0),
                                      (0,0,{'view_mode': 'tree','view_id': ref('cartage_payment_application_tree_view')}),
                                      (0,0,{'view_mode': 'form','view_id': ref('cartage_payment_application_form_view')})]"/>
        </record>
