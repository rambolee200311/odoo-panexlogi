<odoo>
    <record id="view_finance_payment_pie" model="ir.ui.view">
        <field name="name">finance.payment.pie</field>
        <field name="model">panexlogi.finance.payment</field>
        <field name="arch" type="xml">
            <graph string="AP Payment Distribution" type="pie">
                <field name="payee" type="row" string="Vendor"/>
                <field name="pay_amount" type="measure" string="Amount"/>
            </graph>
        </field>
    </record>
    <!--Related applictions Action -->
    <record id="action_show_related_payment_applications" model="ir.actions.act_window">
        <field name="name">Related Payment Applications</field>
        <field name="res_model">panexlogi.finance.paymentapplication</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('payment_id', '=', active_id)]</field>
    </record>
    <!-- Action -->
    <record id="action_finance_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">panexlogi.finance.payment</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first payment
            </p>
        </field>
    </record>
    <!-- Search View -->
    <record id="view_payment_search" model="ir.ui.view">
        <field name="name">panexlogi.finance.payment.search</field>
        <field name="model">panexlogi.finance.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="billno"/>
                <field name="payee"/>
                <field name="payee_account_number"/>
                <field name="payee_bank_bic"/>
                <field name="payment_method"/>
                <field name="pay_date" string="Payment Date"/>
                <field name="pay_amount"/>
                <field name="state"/>
                <field name="pay_remark"/>
                <field name="projects"/>
                <field name="invoicenos"/>
            </search>
        </field>
    </record>
    <!-- Tree View -->
    <record id="view_payment_tree" model="ir.ui.view">
        <field name="name">panexlogi.finance.payment.tree</field>
        <field name="model">panexlogi.finance.payment</field>
        <field name="arch" type="xml">
            <tree string="Payments"  decoration-success="state=='confirm'" decoration-info="state=='new'"  decoration-danger="state=='paid'" limit="50">
                <field name="billno" optional="show"/>
                <field name="projects" optional="show"/>
                <field name="invoicenos" optional="show"/>
                <field name="payee" optional="show"/>
                <field name="payee_account_number" optional="show"/>
                <field name="payee_bank_bic" optional="show"/>
                <field name="payment_method" optional="show"/>
                <field name="pay_date" optional="show"/>
                <field name="pay_amount" optional="show" sum="Page Total: %s"/>
                <field name="state" optional="show"/>
                <field name="pay_remark"  optional="show"/>
                <field name="pay_pdffile" filename="pay_pdffilename" widget="binary_filename"/>
                <field name="pay_pdffilename" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">panexlogi.finance.payment.form</field>
        <field name="model">panexlogi.finance.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- groups="panexLogi.groups_panex_finance_manager"-->
                    <button name="action_confirm_order" type="object" string="Confirm" class="btn-primary" invisible="state!='new'" groups="panexLogi.groups_panex_finance_manager"/>
                    <button name="action_unconfirm_order" type="object" string="UnConfirm" class="btn-primary" invisible="state!='confirm'" groups="panexLogi.groups_panex_finance_manager"/>
                    <button name="action_cancel_order" type="object" string="Cancel" class="btn-secondary" invisible="state!='new'" groups="panexLogi.groups_panex_finance_manager"/>
                    <button name="action_paid_order" type="object" string="Paid" class="btn-success" invisible="state!='confirm'" groups="panexLogi.groups_panex_finance_manager"/>
                    <button name="action_unpaid_order" type="object" string="Unpaid" class="btn-warning" invisible="state!='paid'" groups="panexLogi.groups_panex_finance_manager"/>
                    <button name="action_renew_order" type="object" string="Renew" class="btn-info" invisible="state!='cancel'" groups="panexLogi.groups_panex_finance_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,confirm,paid"/>
                    <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_show_related_payment_applications)d"
                                    type="action"
                                    string="related Payment Applications"
                                    class="oe_stat_button" icon="fa-building"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            Payment
                        </h1>
                        <h2>
                            <field name="billno"/>
                        </h2>
                    </div>
                    <group col="2">
                        <group col="2" string="Payee">
                            <field name="payee"  readonly="state!='new'"/>
                            <field name="payee_account_partner"  readonly="state!='new'"/>
                            <field name="payee_account_number"  readonly="state!='new'"/>
                            <field name="payee_bank_bic"  readonly="state!='new'"/>
                        </group>
                        <group col="2" string="Payer">
                            <field name="payer"  readonly="state!='new'"/>
                            <field name="payer_account"  readonly="state!='new'"/>
                            <field name="payer_bank"  readonly="state!='new'"/>
                        </group>
                    </group>
                    <group col="2" string="Info">
                        <group col="2">
                            <field name="payment_method"  readonly="state!='new'"/>
                            <field name="pay_date"  readonly="state!='new'"/>
                            <field name="pay_amount"  readonly="state!='new'"/>
                            <field name="pay_amount_usd"  readonly="state!='new'"/>
                        </group>
                        <group col="2">
                            <field name="pay_remark"  readonly="state!='new'"/>
                            <field name="pay_pdffile" filename="pay_pdffilename" widget="binary_filename"/>
                            <field name="pay_pdffilename" invisble="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Lines">
                            <field name="paymentline_ids" readonly="true">
                                <tree editable="bottom">
                                    <field name="source"/>
                                    <field name="source_code"/>
                                    <field name="project"/>
                                    <field name="invoiceno"/>
                                    <field name="invoice_date"/>
                                    <field name="due_date"/>
                                    <field name="fitem"/>
                                    <field name="pay_amount"/>
                                    <field name="pay_amount_usd"/>
                                    <field name="pay_remark"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>


</odoo>