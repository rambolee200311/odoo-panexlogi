<odoo>
    <!-- Form View -->
    <record id="view_settle_clearance_form" model="ir.ui.view">
        <field name="name">settle.clearance.form</field>
        <field name="model">panexlogi.settle.clearance</field>
        <field name="arch" type="xml">
            <form string="Settle Clearance">
                <header>
                    <button name="action_confirm_order"
                            type="object"
                            string="Confirm"
                            invisible="state == 'confirm' or state == 'cancel'"
                            class="btn-danger"/>
                    <button name="action_unconfirm_order"
                            type="object"
                            string="Unconfirm"
                            invisible="state == 'new' or state == 'cancel'"
                            class="btn-primary"/>
                    <button name="action_cancel_order"
                            type="object"
                            string="Cancel"
                            invisible="state == 'confirm' or state == 'cancel'"
                            class="btn-warning"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,confirm"/>
                    <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" style="border: 1px solid #000; padding: 10px;">
                        <button name="get_clearance_detail"
                                type="object"
                                string="Get Details"
                                confirm="Are you sure you want to delete and refresh the details?"
                                context="{'save_self': True}"
                                class="oe_stat_button" icon="fa-money"
                                invisible="state!='new'"/>
                        <button name="print_detail_to_excel"
                                type="object"
                                string="Output Details"
                                confirm="Are you sure you want to output details into Excel?"
                                context="{'save_self': True}"
                                class="oe_stat_button" icon="fa-file-excel-o"/>
                    </div>
                    <div class="oe_title">
                        <h1>Settle Clearance</h1>
                        <h2><field name="billno"/></h2>
                    </div>
                    <group col="2">
                        <group col="2" string="Main">
                            <field name="period"  readonly="state!='new'"/>
                            <field name="start_date" readonly="state!='new'"/>
                            <field name="end_date" readonly="state!='new'"/>
                            <field name="date_type" readonly="state!='new'"/>
                            <field name="project" readonly="state!='new'"/>
                            <field name="remark" readonly="state!='new'"/>
                        </group>
                        <group col="2" string="Info">
                            <field name="pdffile" filename="pdffilename" widget="binary_filename"/>
                            <field name="pdffilename" invisible="1"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="total_amount_invoice" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="settle_clearance_detail_ids" readonly="state!='new'">
                                <tree editable="bottom">
                                    <field name="invoice_id"/>
                                    <field name="invoiceno"/>
                                    <field name="invoice_date"/>
                                    <field name="due_date"/>
                                    <field name="payment_id"/>
                                    <field name="pay_date"/>
                                    <field name="waybill_id"/>
                                    <field name="jobno"/>
                                    <field name="waybillno"/>
                                    <field name="Container"/>
                                    <field name="container_qty"/>
                                    <field name="clearance_type"/>
                                    <field name="fitem"/>
                                    <field name="fitem_name"/>
                                    <field name="poa"/>
                                    <field name="t1"/>
                                    <field name="vdn"/>
                                    <field name="imd"/>
                                    <field name="exa"/>
                                    <field name="lfr"/>
                                    <field name="expa"/>
                                    <field name="amount"/>
                                    <field name="invoice_amount"/>
                                    <field name="remark"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Outputs logs">
                            <field name="settle_clearance_output_ids" readonly="1">
                                <tree>
                                    <field name="description"/>
                                    <field name="excel_file" filename="excel_filename" widget="binary_filename"/>
                                    <field name="excel_filename" invisible="1" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_settle_clearance_tree" model="ir.ui.view">
        <field name="name">settle.clearance.tree</field>
        <field name="model">panexlogi.settle.clearance</field>
        <field name="arch" type="xml">
            <tree string="Settle Clearance"
                  decoration-success="state=='confirm'" decoration-info="state=='new'" decoration-danger="state=='cancel'"
                  limit="50">
                <field name="billno" optional="show"/>
                <field name="period" optional="show"/>
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
                <field name="project" optional="show"/>
                <field name="state" optional="show"/>
                <field name="total_amount" optional="show"/>
                <field name="total_amount_invoice" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_settle_clearance_search" model="ir.ui.view">
        <field name="name">settle.clearance.search</field>
        <field name="model">panexlogi.settle.clearance</field>
        <field name="arch" type="xml">
            <search string="Settle Clearance">
                <field name="billno"/>
                <field name="period"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="project"/>
                <field name="state"/>
                <field name="total_amount"/>
            </search>
        </field>
    </record>
    <!--Output Form View -->
    <record id="view_settle_clearance_output_form" model="ir.ui.view">
        <field name="name">settle.clearance.output.form</field>
        <field name="model">panexlogi.settle.clearance.output</field>
        <field name="arch" type="xml">
            <form string="Settle Clearance Output">
                <sheet>
                    <group>
                        <field name="settle_clearance_id"/>
                        <field name="description"/>
                        <field name="excel_file" filename="excel_filename" widget="binary"/>
                        <field name="excel_filename"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action -->
    <record id="action_settle_clearance" model="ir.actions.act_window">
        <field name="name">Settle Clearance</field>
        <field name="res_model">panexlogi.settle.clearance</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_settle_clearance_tree"/>
        <field name="search_view_id" ref="view_settle_clearance_search"/>
    </record>
    <!-- Reset Clearance Wizard -->
    <record id="view_settle_clearance_reset_wizard_form" model="ir.ui.view">
        <field name="name">panexlogi.settle.clearance.reset.wizard.form</field>
        <field name="model">panexlogi.settle.clearance.reset.wizard</field>
        <field name="arch" type="xml">
            <form string="Reset Clearance">
                <div class="o_container">
                    <group class="bg-white p-4 rounded border col-12">
                        <!--
                        <div class="text-center mb-4">
                            <h2 class="text-primary"><strong>Reset Clearance</strong></h2>
                        </div>
                        -->
                        <field name="settle_clearance_id" invisible="1"/>
                        <label for="settle_clearance_id"/>
                        <!-- 内容区 -->
                        <div class="col-12 px-5 mb-4">  <!-- 增加水平padding -->
                            <div style="font-size: 16px; color: #6c757d; line-height: 1.5; text-align: center">
                                Do you want to reset POA, T1... value to zero in Clearance Invoices?
                            </div>
                        </div>
                        <footer class="d-flex justify-content-center gap-3 mt-4">
                            <button string="OK"
                                    type="object"
                                    name="action_reset_poa"
                                    class="btn-primary font-weight-bold"
                                    icon="fa-check"
                                    default_focus="1"/>
                            <button string="Don't Reset"
                                    type="object"
                                    name="action_dont_reset_poa"
                                    class="btn-secondary"/>
                            <button string="Cancel"
                                    type="object"
                                    name="action_cancel"
                                    icon="fa-times"
                                    class="btn-secondary"/>
                        </footer>
                    </group>
                </div>
            </form>
        </field>
    </record>


    <record id="action_settle_clearance_reset_wizard" model="ir.actions.act_window">
        <field name="name">Reset Clearance</field>
        <field name="res_model">panexlogi.settle.clearance.reset.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_settle_clearance_reset_wizard_form"/>
    </record>
    <!-- Update Clearance Wizard -->
    <record id="view_settle_clearance_update_wizard_form" model="ir.ui.view">
        <field name="name">panexlogi.settle.clearance.update.wizard.form</field>
        <field name="model">panexlogi.settle.clearance.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Clearance">
                <div class="o_container">
                    <group class="bg-white p-4 rounded border col-12">
                        <!--
                        <div class="text-center mb-4">
                            <h2 class="text-primary"><strong>Update Clearance</strong></h2>
                        </div>
                        -->
                        <field name="settle_clearance_id" invisible="1"/>
                        <label for="settle_clearance_id"/>
                        <!-- 内容区 -->
                        <div class="col-12 px-5 mb-4">  <!-- 增加水平padding -->
                            <div style="font-size: 16px; color: #6c757d; line-height: 1.5; text-align: center">
                                Do you want to update the POA, T1... value in Clearance Invoice?
                            </div>
                        </div>
                        <footer class="d-flex justify-content-center gap-3 mt-4">
                            <button string="OK"
                                    type="object"
                                    name="action_confirm"
                                    class="btn-primary font-weight-bold"
                                    icon="fa-check"
                                    default_focus="1"/>
                            <button string="Don't Update"
                                    type="object"
                                    name="action_not_confirm"
                                    class="btn-secondary"/>
                            <button string="Cancel"
                                    type="object"
                                    name="action_cancel"
                                    icon="fa-times"
                                    class="btn-secondary"/>
                        </footer>
                    </group>
                </div>
            </form>
        </field>
    </record>
</odoo>