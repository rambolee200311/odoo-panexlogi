<odoo>
    <!-- Delivery Order Report -->
    <template id="report_delivery_order" name="Delivery Order Report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Delivery Order: <span t-field="o.billno"/></h2>
                    <table class="table table-bordered">
                        <tr>
                            <td>Date</td>
                            <td><span t-field="o.date"/></td>
                        </tr>
                        <tr>
                            <td>Project</td>
                            <td><span t-field="o.project.name"/></td>
                        </tr>
                        <tr>
                            <td>Load Address</td>
                            <td><span t-field="o.load_address"/></td>
                        </tr>
                        <tr>
                            <td>Unload Address</td>
                            <td><span t-field="o.unload_address"/></td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
    <!-- Delivery Order Report Action -->
    <report
        id="action_report_delivery_order"
        model="panexlogi.delivery.order"
        string="Delivery Order Report"
        report_type="qweb-pdf"
        name="panexLogi.report_delivery_order"
        paperformat="standard"
    />
</odoo>