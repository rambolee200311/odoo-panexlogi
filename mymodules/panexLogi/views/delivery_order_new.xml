<odoo>
    <data>
        <record id="action_delivery_order_new_wizard" model="ir.actions.act_window">
            <field name="name">Create Delivery Order New</field>
            <field name="res_model">delivery.order.new.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Tree View for DeliveryOrderNew -->
        <record id="view_delivery_order_new_tree" model="ir.ui.view">
            <field name="name">delivery.order.new.tree</field>
            <field name="model">panexlogi.delivery.order.new</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="billno"/>
                    <field name="date"/>
                    <field name="project"/>
                    <field name="truckco"/>
                    <field name="state"/>
                    <field name="delivery_state"/>
                </tree>
            </field>
        </record>

        <!-- Form View for DeliveryOrderNew -->
        <record id="view_delivery_order_new_form" model="ir.ui.view">
            <field name="name">delivery.order.new.form</field>
            <field name="model">panexlogi.delivery.order.new</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                         <button name="action_confirm_order"
                                type="object"
                                string="Confirm"
                                invisible="state == 'confirm' or state == 'cancel' or state == 'order'"
                                class="btn-danger"/>
                         <button name="action_unconfirm_order"
                                type="object"
                                string="Unconfirm"
                                invisible="state == 'new' or state == 'cancel' or state == 'order'"
                                class="btn-primary"/>
                         <button name="action_cancel_order"
                                type="object"
                                string="Cancel"
                                invisible="state == 'confirm' or state == 'cancel' or state == 'order'"
                                class="btn-warning"/>
                         <field
                                name="state"
                                widget="statusbar"
                                statusbar_visible="new,confirm,order"/>
                         <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                Delivery Order
                            </h1>
                            <h2>
                                <field name="billno"/>
                            </h2>
                        </div>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_print_delivery_order"
                                type="object"
                                string="Print"
                                class="oe_stat_button" icon="fa-print"/>
                            <button name="action_open_change_wizard"
                                type="object"
                                string="Change"
                                class="oe_stat_button" icon="fa-camera-retro"/>
                        </div>
                        <group col="2">
                            <group>
                                <field name="date"/>
                                <field name="project" readonly="state!='new'"/>
                                <field name="truckco" readonly="state!='new'"/>

                            </group>
                            <group>
                                <field name="delivery_state" readonly="1" widget="badge"/>
                                <field name="remark" readonly="state!='new'"/>
                               <!-- <field name="outside_eu"/>
                                <field name="import_file" filename="import_filename"/>
                                <field name="export_file" filename="export_filename"/>
                                <field name="order_file" filename="order_filename" widget="binary" readonly="state!='new'"/>
                                <field name="order_filename" readonly="state!='new'"/>-->
                            </group>
                        </group>
                        <group>
                            <field name="quote"/>
                            <field name="additional_cost"/>
                            <field name="extra_cost"/>
                        </group>
                        <notebook>
                            <page string="CMR">
                                <field name="delivery_detail_cmr_ids" readonly="state!='new'">
                                    <tree delete="false" create="false">
                                        <field name="billno" optional="show"/>
                                        <field name="delivery_id" optional="show"/>
                                        <field name="load_address" optional="show"/>
                                        <field name="loading_refs" optional="show"/>
                                        <field name="load_date" optional="show"/>
                                        <field name="unload_address" optional="show"/>
                                        <field name="consignee_refs" optional="show"/>
                                        <field name="unload_date" optional="show"/>
                                        <field name="cntrnos" optional="show"/>
                                        <field name="cmr_file" filename="cmr_filename" optional="show"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Details">
                                <field name="delivery_detail_ids" readonly="state!='new'">
                                    <tree delete="false" create="false">
                                        <field name="loading_ref"/>
                                        <field name="load_condition"/>
                                        <field name="load_address"/>
                                        <field name="load_date"/>
                                        <field name="load_timeslot"/>
                                        <field name="consignee_ref"/>
                                        <field name="unload_condition"/>
                                        <field name="unload_address"/>
                                        <field name="unload_date"/>
                                        <field name="unload_timeslot"/>
                                        <field name="cntrno"/>
                                        <field name="product"/>
                                        <field name="product_name"/>
                                        <field name="adr"/>
                                        <field name="uncode"/>
                                        <field name="pallets"/>
                                        <field name="qty"/>
                                        <field name="batch_no"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Change Log">
                                <field name="delivery_order_change_log_ids" readonly="state!='new'"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View for DeliveryOrderNew -->
        <record id="view_delivery_order_new_search" model="ir.ui.view">
            <field name="name">delivery.order.new.search</field>
            <field name="model">panexlogi.delivery.order.new</field>
            <field name="arch" type="xml">
                <search>
                    <field name="billno"/>
                    <field name="date"/>
                    <field name="project"/>
                    <field name="truckco"/>
                </search>
            </field>
        </record>

        <!-- Action for DeliveryOrderNew -->
        <record id="action_delivery_order_new" model="ir.actions.act_window">
            <field name="name">Delivery Orders</field>
            <field name="res_model">panexlogi.delivery.order.new</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_delivery_order_new_search"/>
        </record>

        <!-- Form View for DeliveryOrderNewWizard -->
        <record id="view_delivery_order_wizard_form" model="ir.ui.view">
            <field name="name">delivery.order.new.wizard.form</field>
            <field name="model">delivery.order.new.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Delivery Order">
                    <group>
                        <field name="delivery_id" invisible="1"/>
                        <field name="selected_cmr_ids"
                           widget="many2many"
                           context="{'tree_view_ref': 'panexlogi.delivery_detail_cmr_view_tree'}">
                            <tree>
                                <field name="billno" string="Bill No"/>
                                <field name="loading_refs" string="Loading Refs"/>
                                <field name="load_date" string="Loading Date"/>
                                <field name="consignee_refs" string="Consignee"/>
                                <field name="cntrnos" string="Container No"/>
                                <field name="state" string="Status"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="create_delivery_order_new"
                                type="object"
                                string="Confirm"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- Delivery Order change log tree view -->
        <record id="view_delivery_order_change_log_new_tree" model="ir.ui.view">
            <field name="name">delivery.order.change.new.log.tree</field>
            <field name="model">delivery.order.change.log.new</field>
            <field name="arch" type="xml">
                <tree string="Delivery Order Change Logs" create="false">
                   <!-- <field name="delivery_order_id"/>-->
                    <field name="extra_cost"/>
                    <field name="charge"/>
                    <field name="reason"/>
                    <field name="remark"/>
                    <field name="change_time"/>
                </tree>
            </field>
        </record>
        <!-- Delivery Order change log form view -->
        <record id="view_delivery_order_change_log_new_form" model="ir.ui.view">
            <field name="name">delivery.order.change.log.new.form</field>
            <field name="model">delivery.order.change.log.new</field>
            <field name="arch" type="xml">
                <form string="Delivery Order Change Log">
                    <sheet>
                        <group>
                            <!--<field name="delivery_order_id" readonly="1"/>-->
                            <field name="extra_cost"/>
                            <field name="charge"/>
                            <field name="reason"/>
                            <field name="remark"/>
                            <field name="change_time" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Delivery Order change wizard form view -->
        <record id="view_delivery_order_change_wizard_new_form" model="ir.ui.view">
        <field name="name">delivery.order.change.wizard.new.form</field>
        <field name="model">delivery.order.change.wizard.new</field>
        <field name="arch" type="xml">
            <form string="Delivery Order Change Wizard">
                <sheet>
                    <group>
                        <field name="delivery_order_id_new" readonly="1"/>
                        <field name="extra_cost" string="Extra Cost (add)"/>
                        <field name="charge" string="Charge (add)"/>
                        <field name="reason"/>
                        <field name="remark"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_record_change" string="Record Change" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    </data>
</odoo>