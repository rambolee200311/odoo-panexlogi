<odoo>
<!-- Search for arrival notice -->
    <record id="waybill_clearinvoice_view_search" model="ir.ui.view">
        <field name="name">waybill.clearinvoice.search.view</field>
        <field name="model">panexlogi.waybill.clearinvoice</field>
        <field name="arch" type="xml">
            <search>
                <field name="billno"/>
                <field name="waybill_billno"/>
                <field name="invno"/>
                <field name="project"/>
                <field name="date"/>
                <field name="state"/>
<!--                <field name="shipping"/>-->
            </search>
        </field>
    </record>
<!--waybill kanban-->
    <record id="waybill_view_clearinvoice_kanban" model="ir.ui.view">
        <field name="name">waybill.clearinvoice.kanban</field>
        <field name="model">panexlogi.waybill.clearinvoice</field>
        <field name="arch" type="xml">
            <kanban>

                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}">
                            <div class="oe_dropdown_kanban">
                                <div class="oe_dropdown_toggle">
                                    <i class="fa fa-bars fa-lg"/>
                                    <ul class="oe_dropdown_menu">
                                        <li>
                                            <a type="edit">Edit</a>
                                        </li>
                                        <li>
                                            <ul class="oe_kanban_colorpicker" datafield="color"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                            <div t-attf-class="oe_kanban_content">
                                BillNo:
                                <field name="billno"/>
                                <br/>
                                B/L No:
                                <field name="waybill_billno"/>
                                <br/>
                                Invoice No（发票号）:
                                <field name="invno"/>
                                <br/>
                                Project:
                                <field name="project"/>
                                <br/>
                                Start date:
                                <field name="date"/>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>
<!--    arrival notice tree-->
    <record id="panexlogi_waybill_clearinvoice_tree" model="ir.ui.view">
        <field name="name">panexlogi.waybill.clearinvoice.tree</field>
        <field name="model">panexlogi.waybill.clearinvoice</field>
        <field name="arch" type="xml">
            <tree string="Clearance_invoce_Tree" decoration-success="state=='confirm'" decoration-info="state=='new'"  decoration-danger="state=='paid'">
                <field name="billno"/>
                <field name="waybill_billno"/>
                <field name="invno"/>
                <field name="cntrnos"/>
                <field name="refnos"/>
                <field name="date"/>
                <field name="due_date"/>
                <field name="payee"/>
                <field name="project"/>
                <field name="usdtotal"/>
                <field name="eurtotal"/>
                <field name="pdffile" filename="pdffilename" widget="binary_filename"/>
                <field name="pdffilename" invisible="True"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
<!--    arrival notice calendar-->
    <record id="clear_invoice_view_calendar" model="ir.ui.view">
        <field name="name">clear.invoice.calendar</field>
        <field name="model">panexlogi.waybill.clearinvoice</field>
        <field name="arch" type="xml">
            <calendar string="Clearance Invoice Calendar"
                      date_start="date" date_stop="date"
                      color="color" mode="month">
                <field name="billno"/>
                <field name="waybill_billno"/>
                <field name="invno"/>
            </calendar>
        </field>
    </record>
<!--    arrival notice form-->
    <record id="panexlogi_waybill_clearinvoice_form" model="ir.ui.view">
        <field name="name">panexlogi.waybill.clearinvoice.form</field>
        <field name="model">panexlogi.waybill.clearinvoice</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                     <button name="action_confirm_order"
                            type="object"
                            string="Confirm"
                            invisible="state == 'confirm' or state == 'cancel' or state == 'apply' or state == 'paid'"
                            class="btn-danger"/>
                     <button name="action_unconfirm_order"
                            type="object"
                            string="Unconfirm"
                            invisible="state == 'new' or state == 'cancel' or state == 'apply' or state == 'paid'"
                            class="btn-primary"/>
                     <button name="action_cancel_order"
                            type="object"
                            string="Cancel"
                            invisible="state == 'confirm' or state == 'cancel' or state == 'apply' or state == 'paid'"
                            class="btn-warning"/>
                     <button name="create_payment_application"
                            type="object"
                            string="Apply Pay"
                            invisible="state == 'new' or state == 'cancel' or state == 'apply' or state == 'paid'"
                            class="btn-primary"/>
                     <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="new,confirm,apply,paid"/>
                      <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Clearance Invoice
                        </h1>
                        <h2>
                            <field name="billno"/>
                        </h2>
                    </div>
                    <group col="2">
                        <group col="2">
                            <field name="payee" readonly="state!='new'"/>
                            <field name="project" readonly="state!='new'"/>
                            <field name="date" readonly="state!='new'"/>
                            <field name="due_date" readonly="state!='new'"/>
                            <field name="invno" readonly="state!='new'"/>
                            <field name="waybill_application" readonly="state!='new'"/>
                            <field name="cntrnos"/>
                            <field name="refnos"/>
                        </group>
                        <group col="2">
                            <field name="usdtotal" readonly="state!='new'"/>
                            <field name="eurtotal" readonly="state!='new'"/>
                            <field name="pdffile" filename="pdffilename" widget="binary_filename"/>
                            <field name="pdffilename" invisible="True"/>
                            <field name="poa"/>
                            <field name="t1"/>
                            <field name="vdn"/>
                            <field name="imd"/>
                            <field name="exa"/>
                            <field name="lfr"/>
                            <field name="expa"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="waybillclearinvoicedetail_ids" readonly="state!='new'">
                                <tree string="Lines">
                                    <field name="clearance_type"/>
                                    <field name="cntrno"/>
                                    <field name="refno"/>
                                    <field name="fitem"/>
                                    <field name="fitem_name"/>
                                    <field name="amount"/>
                                    <field name="amount_usd"/>
                                    <field name="remark"/>
                                    <field name="poa"/>
                                    <field name="t1"/>
                                    <field name="vdn"/>
                                    <field name="imd"/>
                                    <field name="exa"/>
                                    <field name="lfr"/>
                                    <field name="expa"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_waybill_clearinvoice_detail_form" model="ir.ui.view">
        <field name="name">waybill.clearinvoice.detail.form</field>
        <field name="model">panexlogi.waybill.clearinvoice.detail</field>
        <field name="arch" type="xml">
            <form string="Waybill Clearance Invoice Detail">
                <sheet>
                    <!-- Title Section -->
                    <div class="oe_title">
                        <label for="clearance_type" string="Clearan Type" class="col-form-label"/>
                        <h1><field name="clearance_type" nolabel="1"/></h1>
                    </div>

                    <div class="row mt-4">
                        <!-- Left Column - BASIC INFORMATION -->
                        <div class="col-6">
                            <group string="BASIC INFORMATION">
                                <div class="container-fluid">
                                    <!-- Container No -->
                                    <div class="row mb-4">
                                        <div class="col-6 pr-4">
                                            <label for="cntrno" string="Container No" class="text-small"/>
                                        </div>
                                        <div class="col-6">
                                            <field name="cntrno" class="oe_inline" nolabel="1"/>
                                        </div>
                                        </div><!-- Clearance Type -->

                                        <!-- Reference No -->
                                        <div class="row mb-4">
                                        <div class="col-6 pl-4">
                                            <label for="refno" string="Reference No" class="text-small"/>
                                        </div>
                                        <div class="col-6">
                                            <field name="refno" class="oe_inline" nolabel="1"/>
                                        </div>
                                        </div>
                                        <!-- Fee Item -->
                                        <div class="row mb-4">
                                        <div class="col-6 pl-4">
                                            <label for="fitem" string="Fee Item" class="text-small"/>
                                        </div>
                                        <div class="col-6">
                                            <field name="fitem" class="oe_inline" nolabel="1"/>
                                        </div>
                                        </div>

                                        <!-- Item Name -->
                                        <div class="row mb-4">
                                        <div class="col-6 pl-4">
                                            <label for="fitem_name" string="Item Name" class="text-small"/>
                                        </div>
                                        <div class="col-6">
                                            <field name="fitem_name" class="oe_inline" readonly="1" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </group>
                        </div>

                        <!-- Right Column - AMOUNT DETAILS -->
                        <div class="col-6">
                            <group string="AMOUNT DETAILS">
                                <div class="container-fluid">
                                    <div class="row">
                                        <!-- Amount (C) -->
                                        <div class="row mb-4">
                                            <div class="col-6 pr-4">
                                                <div class="text-right">
                                                    <label for="amount" string="Amount (C)" class="text-bold"/>
                                                </div>
                                                <div class="col-6">
                                                <field name="amount" class="oe_inline text-right" nolabel="1"/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Amount (USD) -->
                                        <div class="row mb-4">
                                            <div class="col-6 pl-4">
                                                <div class="text-right">
                                                    <label for="amount_usd" string="Amount (USD)" class="text-bold"/>
                                                </div>
                                                <div class="col-6">
                                                    <field name="amount_usd" class="oe_inline text-right" nolabel="1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </group>
                        </div>
                    </div>

                    <!-- Additional Details Section -->
                    <notebook class="mt24">
                        <page string="Additional Details">
                            <div class="container-fluid">
                                <!-- Section Header -->
                                <div class="row border-bottom pb-2 mb-4">
                                    <div class="col-12">
                                        <h6 class="text-uppercase text-muted">ADDITIONAL DETAILS</h6>
                                    </div>
                                </div>

                                <!-- Field Rows -->
                                <div class="row">
                                    <div class="col-12">
                                        <!-- POA -->
                                        <div class="row mb-4">
                                            <div class="col-4 text-muted">
                                                <label for="poa" string="POA"/>
                                            </div>
                                            <div class="col-8">
                                                <field name="poa" class="text-right text-muted" nolabel="1"/>
                                            </div>
                                        </div>

                                        <!-- T1 -->
                                        <div class="row mb-4">
                                            <div class="col-4 text-muted">
                                                <label for="t1" string="T1"/>
                                            </div>
                                            <div class="col-8">
                                                <field name="t1" class="text-right text-muted" nolabel="1"/>
                                            </div>
                                        </div>

                                        <!-- VAT Defer Notification -->
                                        <div class="row mb-4">
                                            <div class="col-4 text-muted">
                                                <label for="vdn" string="VAT defer notification"/>
                                            </div>
                                            <div class="col-8">
                                                <field name="vdn" class="text-right text-muted" nolabel="1"/>
                                            </div>
                                        </div>

                                        <!-- Import Declaration -->
                                        <div class="row mb-4">
                                            <div class="col-4 text-muted">
                                                <label for="imd" string="Import declaration"/>
                                            </div>
                                            <div class="col-8">
                                                <field name="imd" class="text-right text-muted" nolabel="1"/>
                                            </div>
                                        </div>

                                        <!-- Extra Article -->
                                        <div class="row mb-4">
                                            <div class="col-4 text-muted">
                                                <label for="exa" string="Extra article"/>
                                            </div>
                                            <div class="col-8">
                                                <field name="exa" class="text-right text-muted" nolabel="1"/>
                                            </div>
                                        </div>

                                        <!-- LFR -->
                                        <div class="row mb-4">
                                            <div class="col-4 text-muted">
                                                <label for="lfr" string="LFR"/>
                                            </div>
                                            <div class="col-8">
                                                <field name="lfr" class="text-right text-muted" nolabel="1"/>
                                            </div>
                                        </div>

                                        <!-- Export -->
                                        <div class="row mb-4">
                                            <div class="col-4 text-muted">
                                                <label for="expa" string="Export"/>
                                            </div>
                                            <div class="col-8">
                                                <field name="expa" class="text-right text-muted" nolabel="1"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>

                    <!-- Remarks Section -->
                    <group string="REMARKS" class="mt24">
                        <field name="remark" nolabel="1" class="oe_inline" colspan="4"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
 <!-- action -->
    <record id="waybill_clearinvoice_action" model="ir.actions.act_window">
        <field name="name">Clearance Invoice</field>
        <field name="res_model">panexlogi.waybill.clearinvoice</field>
        <field name="view_mode">kanban,calendar,tree,form</field>
    </record>

</odoo>