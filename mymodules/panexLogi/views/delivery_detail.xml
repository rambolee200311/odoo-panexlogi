<odoo>
    <data>
        <!-- Action
        <record id="action_delivery_detail" model="ir.actions.act_window">
            <field name="name">Delivery Details</field>
            <field name="res_model">panexlogi.delivery.detail</field>
            <field name="view_mode">tree,form</field>
