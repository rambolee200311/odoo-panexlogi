<odoo>
    <!--Tree view for Address-->
    <record id="view_address_tree" model="ir.ui.view">
        <field name="name">panexlogi.address.tree</field>
        <field name="model">panexlogi.address</field>
        <field name="arch" type="xml">
            <tree>
                <field name="address_code"/>
                <field name="street"/>
                <field name="postcode"/>
                <field name="city"/>
                <field name="state"/>
                <field name="country"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="company_name"/>
                <field name="timeslot"/>
                <field name="is_warehouse"/>
                <field name="warehouse"/>
                <field name="is_terminal"/>
                <field name="terminal"/>
                <field name="remark"/>
            </tree>
        </field>
    </record>
    <!--Search view for Address-->
    <record id="view_address_search" model="ir.ui.view">
        <field name="name">panexlogi.address.search</field>
        <field name="model">panexlogi.address</field>
        <field name="arch" type="xml">
            <search>
                <field name="address_code"/>
                <field name="street"/>
                <field name="postcode"/>
                <field name="city"/>
                <field name="state"/>
                <field name="country"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="company_name"/>
                <field name="timeslot"/>
                <field name="is_warehouse"/>
                <field name="warehouse"/>
                <field name="is_terminal"/>
                <field name="terminal"/>
                <field name="remark"/>
            </search>
        </field>
    </record>
    <!-- Form view for Address-->
    <record id="view_address_form" model="ir.ui.view">
        <field name="name">panexlogi.address.form</field>
        <field name="model">panexlogi.address</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Address
                        </h1>
                        <h2>
                            <field name="address_code"/>
                        </h2>
                    </div>

                    <group col="2" string="Address Information">
                        <group col="2">
                            <field name="is_warehouse"/>
                            <field name="warehouse"/>
                        </group>
                        <group col="2">
                            <field name="is_terminal"/>
                            <field name="terminal"/>
                        </group>
                    </group>
                    <group col="2" string="Street">
                        <field name="street"/>
                        <field name="latlng"/>
                    </group>
                    <group>
                        <button name="button_fetch_google_maps_details"
                                    string="Google Maps"
                                    type="object"
                                    class="oe_stat_button" icon="fa-globe"/>
                    </group>
                    <group col="2">
                        <group col="2" string="Address">
                            <field name="postcode"/>
                            <field name="city"/>
                            <field name="state"/>
                            <field name="country"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <group col="2" string="Contact">
                            <field name="company_name"/>
                            <field name="timeslot"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="remark"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!-- action for Address -->
