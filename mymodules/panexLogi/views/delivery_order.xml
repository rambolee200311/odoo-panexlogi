<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Delivery Order Action -->
    <record id="delivery_order_action" model="ir.actions.act_window">
        <field name="name">Delivery Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">panexlogi.delivery.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first delivery order!
            </p>
        </field>
    </record>

    <!-- Delivery Order Tree View -->
    <record id="view_delivery_order_tree" model="ir.ui.view">
        <field name="name">delivery.order.tree</field>
        <field name="model">panexlogi.delivery.order</field>
        <field name="arch" type="xml">
            <tree string="Delivery Orders">
                <field name="billno" optional="show"/>
                <field name="date" optional="show"/>
                <field name="project" optional="show"/>
                <field name="truckco" optional="show"/>
                <field name="quote" optional="show"/>
                <field name="cntrnos" optional="show"/>
                <field name="load_type"/>
                <field name="load_warehouse"/>
                <field name="load_terminal"/>
                <field name="loading_refs" optional="show"/>
                <field name="loading_address" optional="show"/>
                <field name="load_company_name" optional="show"/>
                <field name="load_contact_phone" optional="show"/>
                <field name="load_postcode" optional="show"/>
                <field name="load_city" optional="show"/>
                <field name="load_country" optional="show"/>
                <field name="load_country_code" optional="show"/>
                <field name="load_address_timeslot" optional="show"/>
                <field name="unloading_address" optional="show"/>
                <field name="unload_company_name" optional="show"/>
                <field name="unload_contact_phone" optional="show"/>
                <field name="unload_postcode" optional="show"/>
                <field name="unload_city" optional="show"/>
                <field name="unload_country" optional="show"/>
                <field name="unload_country_code" optional="show"/>
                <field name="unload_address_timeslot" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Delivery Order Form View -->
    <record id="view_delivery_order_form" model="ir.ui.view">
        <field name="name">delivery.order.form</field>
        <field name="model">panexlogi.delivery.order</field>
        <field name="arch" type="xml">
            <form string="Delivery Order">
                <header>
                    <button name="action_confirm_order"
                        type="object"
                        string="Confirm"
                        invisible="state == 'confirm' or state == 'cancel'"
                        class="btn-danger"/>
                    <button name="action_unconfirm_order"
                        type="object"
                        string="Unconfirm"
                        invisible="state == 'new' or state == 'cancel'"
                        class="btn-primary"/>
                    <button name="action_cancel_order"
                        type="object"
                        string="Cancel"
                        invisible="state == 'confirm' or state == 'cancel'"
                        class="btn-warning"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,confirm"/>
                    <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_print_delivery_order"
                            type="object"
                            string="Print"
                            class="oe_stat_button" icon="fa-print"/>
                        <button name="action_open_change_wizard"
                            type="object"
                            string="Change"
                            class="oe_stat_button" icon="fa-camera-retro"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            Delivery Order
                        </h1>
                        <h2>
                            <field name="billno"/>
                        </h2>
                    </div>
                     <group col="2">
                        <group string="Loading" col="2">
                            <field name="date" readonly="state!='new'"/>
                            <field name="project" readonly="state!='new'"/>
                            <field name="truckco" readonly="state!='new'"/>
                            <!--<field name="amount" readonly="1"/>
                            <field name="state" readonly="1"/>-->
                            <field name="delivery_type" readonly="state!='new'"/>
                            <field name="delivery_id"/>
                            <field name="delivery_detail_id"/>
                            <field name="client"/>
                            <field name="contact_person"/>
                        </group>
                        <group string="Info" col="2">
                            <field name="load_type"/>
                            <field name="load_warehouse"/>
                            <field name="load_terminal"/>
                            <field name="delivery_state"/>
                            <field name="trailer_type"/>
                            <field name="order_remark" />
                        </group>
                    </group>
                    <group col="2">
                        <group string="Documents" col="2">
                            <field name="pod_file" filename="pod_filename" widget="binary"/>
                            <field name="pod_filename"/>
                            <field name="order_file" filename="order_filename" widget="binary" readonly="state!='new'"/>
                            <field name="order_filename" readonly="state!='new'"/>
                        </group>
                        <group string="Out of EU" col="2">
                            <field name="outside_eu"/>
                            <field name="import_file" filename="import_filename"  widget="binary"/>
                            <field name="import_filename" string="Import Document Filename"/>
                            <field name="export_file" sfilename="export_filename" widget="binary"/>
                            <field name="export_filename" string="Order Filename"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Address">
                            <group col="2">
                                <group string="Loading">
                                    <field name="loading_ref" readonly="state!='new'"/>
                                    <field name="loading_condition" readonly="state!='new'"/>
                                    <field name="planned_for_loading" readonly="state!='new'"/>
                                    <field name="loading_address" readonly="state!='new'"/>
                                    <field name="load_company_name" readonly="state!='new'"/>
                                    <field name="load_contact_phone" readonly="state!='new'"/>
                                    <field name="load_postcode" readonly="state!='new'"/>
                                    <field name="load_city" readonly="state!='new'"/>
                                    <field name="load_country" readonly="state!='new'"/>
                                    <field name="load_country_code" readonly="state!='new'"/>
                                    <field name="load_address_timeslot" readonly="state!='new'"/>
                                    <field name="load_remark"/>
                                </group>
                                <group string="Unloading">
                                    <field name="unloading_ref" readonly="state!='new'"/>
                                    <field name="unloading_condition" readonly="state!='new'"/>
                                    <field name="planned_for_unloading" readonly="state!='new'"/>
                                    <field name="unloading_address" readonly="state!='new'"/>
                                    <field name="unload_company_name" readonly="state!='new'"/>
                                    <field name="unload_contact_phone" readonly="state!='new'"/>
                                    <field name="unload_postcode" readonly="state!='new'"/>
                                    <field name="unload_city" readonly="state!='new'"/>
                                    <field name="unload_country" readonly="state!='new'"/>
                                    <field name="unload_country_code" readonly="state!='new'"/>
                                    <field name="unload_address_timeslot" readonly="state!='new'"/>
                                    <field name="unload_remark"/>
                                </group>
                            </group>
                        </page>
                        <page string="Good Info">
                            <field name="delivery_order_line_ids" readonly="state!='new'"/>
                            <!--<group col="2">
                                <group col="2">
                                    <field name="cntrno" readonly="state!='new'"/>
                                    <field name="product" readonly="state!='new'"/>
                                    <field name="product_name" readonly="state!='new'"/>
                                    <field name="batch_no" readonly="state!='new'"/>
                                    <field name="model_type" readonly="state!='new'"/>
                                    <field name="pallets" readonly="state!='new'"/>
                                    <field name="qty" readonly="state!='new'"/>
                                    <field name="package_type" readonly="state!='new'"/>
                                    <field name="package_size" readonly="state!='new'"/>
                                    <field name="weight_per_unit" readonly="state!='new'"/>
                                    <field name="gross_weight" readonly="state!='new'"/>
                                </group>
                                <group col="2">
                                    <field name="uncode" readonly="state!='new'"/>
                                    <field name="class_no" readonly="state!='new'"/>
                                    <field name="adr" readonly="state!='new'"/>
                                    <field name="remark" readonly="state!='new'"/>
                                    <field name="quote" readonly="state!='new'"/>
                                </group>
                            </group>-->
                        </page>
                        <page string="Change Log">
                            <field name="delivery_order_change_log_ids" readonly="state!='new'"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- Delivery Order Search View -->
    <record id="view_delivery_order_search" model="ir.ui.view">
        <field name="name">delivery.order.search</field>
        <field name="model">panexlogi.delivery.order</field>
        <field name="arch" type="xml">
            <search string="Delivery Orders">
                <field name="billno"/>
                <field name="date"/>
                <field name="project"/>
                <field name="truckco"/>
                <field name="cntrnos"/>
                <field name="loading_refs"/>
                <field name="quote"/>
                <field name="state"/>
                <field name="delivery_state"/>
                <field name="trailer_type"/>
                <field name="load_type"/>
                <field name="load_warehouse"/>
                <field name="load_terminal"/>
                <field name="loading_address"/>
                <field name="load_company_name"/>
                <field name="load_contact_phone"/>
                <field name="load_postcode"/>
                <field name="load_city"/>
                <field name="load_country"/>
                <field name="load_country_code"/>
                <field name="load_address_timeslot"/>
                <field name="unloading_address"/>
                <field name="unload_company_name"/>
                <field name="unload_contact_phone"/>
                <field name="unload_postcode"/>
                <field name="unload_city"/>
                <field name="unload_country"/>
                <field name="unload_country_code"/>
                <field name="unload_address_timeslot"/>
            </search>
        </field>
    </record>
    <!-- Delivery Order tree Print Action -->
    <record id="action_print_delivery_order" model="ir.actions.server">
        <field name="name">Print Delivery Orders</field>
        <field name="model_id" ref="model_panexlogi_delivery_order"/>
        <field name="binding_model_id" ref="model_panexlogi_delivery_order"/>
        <field name="state">code</field>
        <field name="code">
            action = env['panexlogi.delivery.order'].browse(
                env.context.get('active_ids')
            ).action_print_delivery_order_tree()
        </field>
    </record>
    <!-- Delivery Order Line Form View -->
    <record id="view_delivery_order_line_form" model="ir.ui.view">
        <field name="name">panexlogi.delivery.order.line.form</field>
        <field name="model">panexlogi.delivery.order.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <group col="2">
                            <field name="billno" string="Bill No" readonly="1"/>
                            <field name="loading_ref" string="Loading Ref"/>
                            <field name="consignee_ref" string="Consignee Ref"/>
                            <field name="delivery_type" string="Delivery Type"/>
                            <field name="stackable"/>
                            <!--<field name="loading_conditon" string="Loading Condition"/>
                            <field name="unloading_conditon" string="Unloading Condition"/>-->
                        </group>
                        <group col="2">
                            <field name="planned_for_loading" string="Planned Loading"/>
                            <field name="planned_for_unloading" string="Planned Unloading"/>
                            <field name="cntrno" string="Container No"/>
                            <field name="product" string="Product"/>
                            <field name="product_name" string="Product Name"/>
                            <field name="qty" string="Pcs"/>
                            <field name="pallets" string="Pallets"/>
                        </group>
                    </group>
                    <group col="2">
                    <!-- 包装和重量信息 -->
                        <group string="Package Details" col="2">
                            <field name="package_type" string="Package Type"/>
                            <field name="package_size" string="Size (L*W*H)"/>
                            <field name="weight_per_unit" string="Weight per Unit"/>
                            <field name="gross_weight" string="Gross Weight"/>
                        </group>
                        <!-- 备注和文件 -->
                        <group string="Additional Info" col="2">
                            <field name="batch_no" string="Batch No"/>
                            <field name="model_type" string="Model Type"/>
                            <field name="uncode" string="UN Code"/>
                            <field name="class_no" string="Class"/>
                            <field name="adr" string="ADR"/>
                            <field name="remark" string="Remark"/>
                        </group>
                    </group>
                    <!-- 文件上传字段 -->
                    <group col="2">
                        <group string="Documents" col="2">
                            <field name="pod_file" string="POD File" widget="binary"/>
                            <field name="pod_filename" string="POD Filename"/>
                            <field name="order_file" string="Order File" widget="binary"/>
                            <field name="order_filename" string="Order Filename"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Delivery Order Line Tree View -->
    <record id="view_delivery_order_line_full_tree" model="ir.ui.view">
        <field name="name">panexlogi.delivery.order.line.full.tree</field>
        <field name="model">panexlogi.delivery.order.line</field>
        <field name="arch" type="xml">
            <tree>
                <!-- 核心字段（默认显示） -->
                <field name="billno" string="Bill No" optional="hide"/>
                <field name="loading_ref" string="Loading Ref" optional="show"/>

                <!-- 可选字段（用户可通过列选择器显示） -->
               <!-- <field name="loading_conditon" string="Loading Condition" optional="show"/>
                <field name="unloading_conditon" string="Unloading Condition" optional="show"/>-->
                <field name="cntrno" string="Container No" optional="show"/>
                <field name="product" string="Product" optional="show"/>
                <field name="product_name" string="Product Name" optional="show"/>
                <field name="pallets" string="Pallets" optional="show"/>
                <field name="qty" string="Quantity" optional="show"/>
                <field name="batch_no" string="Batch No" optional="show"/>
                <field name="model_type" string="Model Type" optional="show"/>
                <field name="package_type" string="Package Type" optional="show"/>
                <field name="package_size" string="Size (L*W*H)" optional="show"/>
                <field name="weight_per_unit" string="Weight per Unit" optional="show"/>
                <field name="gross_weight" string="Gross Weight" optional="show"/>
                <field name="uncode" string="UN Code" optional="show"/>
                <field name="class_no" string="Class" optional="show"/>
                <field name="adr" string="ADR" optional="show"/>
                <field name="remark" string="Remark" optional="show"/>
                <field name="order_remark" string="Order Remark" optional="show"/>
                <field name="load_remark" string="Load Remark" optional="show"/>
                <field name="unload_remark" string="Unload Remark" optional="show"/>
                <field name="quote" string="Quote" optional="show"/>
                <field name="additional_cost" string="Additional Cost" optional="show"/>
                <field name="pod_file" string="POD File" optional="show"/>
                <field name="pod_filename" string="POD Filename" optional="show"/>
                <field name="order_file" string="Order File" optional="show"/>
                <field name="order_filename" string="Order Filename" optional="show"/>

                <field name="consignee_ref" string="Consignee Ref" optional="show"/>
                <field name="delivery_type" string="Delivery Type" optional="show"/>
                <field name="planned_for_loading" string="Planned Loading" optional="show"/>
                <field name="planned_for_unloading" string="Planned Unloading" optional="show"/>
            </tree>
        </field>
    </record>
    <!-- Delivery Order change wizard view -->
    <record id="view_delivery_order_change_wizard_form" model="ir.ui.view">
        <field name="name">delivery.order.change.wizard.form</field>
        <field name="model">delivery.order.change.wizard</field>
        <field name="arch" type="xml">
            <form>  <!-- 移除 string 属性 -->
                <header>
                    <h2>Delivery Order</h2>  <!-- 添加副标题 -->
                    <h3><field name="delivery_order_id"/></h3>
                </header>
                <sheet>
                    <group>
                        <field name="extra_cost" string="Extra Cost (add)"/>
                        <field name="charge" string="Charge (add)"/>
                        <field name="reason"/>
                        <field name="remark"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_record_change" string="Change" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Delivery Order change wizard action -->
    <!-- 修改 XML 动作定义 -->
    <record id="action_open_change_wizard" model="ir.actions.act_window">
        <field name="name">Change Log</field>  <!-- 设置窗口标题 -->
        <field name="res_model">delivery.order.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" eval="ref('panexLogi.model_panexlogi_delivery_order')"/>  <!-- 绑定到配送订单模型 -->
    </record>

    <!-- Delivery Order change log tree view -->
    <record id="view_delivery_order_change_log_tree" model="ir.ui.view">
        <field name="name">delivery.order.change.log.tree</field>
        <field name="model">delivery.order.change.log</field>
        <field name="arch" type="xml">
            <tree string="Delivery Order Change Logs" create="false">
               <!-- <field name="delivery_order_id"/>-->
                <field name="extra_cost"/>
                <field name="charge"/>
                <field name="reason"/>
                <field name="remark"/>
                <field name="change_time"/>
            </tree>
        </field>
    </record>
    <!-- Delivery Order change log form view -->
    <record id="view_delivery_order_change_log_form" model="ir.ui.view">
        <field name="name">delivery.order.change.log.form</field>
        <field name="model">delivery.order.change.log</field>
        <field name="arch" type="xml">
            <form string="Delivery Order Change Log">
                <sheet>
                    <group>
                        <!--<field name="delivery_order_id" readonly="1"/>-->
                        <field name="extra_cost"/>
                        <field name="charge"/>
                        <field name="reason"/>
                        <field name="remark"/>
                        <field name="change_time" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>