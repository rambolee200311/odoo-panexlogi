<odoo>
    <data>
        <!-- Transport Order Email View -->
        <record id="email_template_transport_order" model="mail.template">
            <field name="name">Transport Order Email</field>
            <field name="model_id" ref="panexLogi.model_panexlogi_transport_order"/>
            <field name="subject">Transport Order</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ object.truckco.email }}</field>
            <field name="body_html" type="html">
                <div>
                    Dear <t t-out="object.truckco.name or ''">  </t>,<br/><br/>
                    please collect from: <!--<t t-out="object.collterminal.terminal_name or ''">  </t>-->
                    <t t-if="object.collterminal">
                        <t t-esc="object.collterminal.terminal_code or ''"/>,
                        <t t-esc="object.collterminal.address.street or ''"/>
                        <t t-esc="object.collterminal.address.zip or ''"/>
                        <t t-esc="object.collterminal.address.city or ''"/>,
                        <t t-esc="object.collterminal.address.country_id.name or ''"/>
                    </t>
                    <br/><br/>
                    reference: <t t-out="object.billno or ''">  </t><br/><br/>
                </div>
                <div>
                    <table border="1" cellpadding="5" cellspacing="0" width="100%">
                        <tr>
                            <th>container no</th>
                            <th>collect date</th>
                            <th>unload warehouse</th>
                           <!-- <th>unload location</th>-->
                            <th>drop off</th>
                        </tr>
                        <t t-foreach="object.transportorderdetailids" t-as="item">
                            <tr>
                                <td><t t-esc="item.cntrno"/></td>
                                <!--<td><t t-esc="item.coldate"/></td>-->
                                <td><t t-esc="format_date(item.coldate, 'dd/MM/yyyy')"/></td>
                                <td>
                                 <t t-if="item.warehouse">
                                    <t t-esc="item.warehouse.name or ''"/>,
                                    <t t-esc="item.warehouse.partner_id.street or ''"/>,<br/>
                                    <t t-esc="item.warehouse.partner_id.zip or ''"/>
                                    <t t-esc="item.warehouse.partner_id.city or ''"/>,
                                    <t t-esc="item.warehouse.partner_id.country_id.name or ''"/>
                                 </t>
                                <!--<t t-esc="item.warehouse_code"/></td>
                                <td>--><t t-esc="item.unlolocation"/></td>
                                <td>
                                    <!--<t t-esc="item.dropterminal_code"/>-->
                                    <t t-if="item.dropterminal">
                                        <t t-esc="item.dropterminal.terminal_code or ''"/>,
                                        <t t-esc="item.dropterminal.address.street or ''"/>,<br/>
                                        <t t-esc="item.dropterminal.address.zip or ''"/>
                                        <t t-esc="item.dropterminal.address.city or ''"/>,
                                        <t t-esc="item.dropterminal.address.country_id.name or ''"/>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
                <div style="margin-top: 20px; border-top: 1px solid #eee; padding-top: 15px;">
                    <table width="100%">
                        <tr>
                            <td align="left" valign="bottom" style="padding: 0; vertical-align: bottom !important;">
                                <span style="display: inline-block; font-size: 12px; color: #666;">
                                    <img t-if="user.company_id.logo"
                                         t-att-src="'data:image/png;base64,' + user.company_id.logo.decode('utf-8')"
                                         style="height: 48px; margin-right: 10px; float: left;"
                                         t-att-alt="user.company_id.name"/>
                                    <strong style="color: #2B2B2B; display: block; padding-top: 5px;">
                                        <t t-out="user.company_id.name or ''"/>
                                    </strong>
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>


            </field>
        </record>
    </data>
</odoo>