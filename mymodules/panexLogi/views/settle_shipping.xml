<odoo>
    <!-- Form View -->
    <record id="view_settle_shipping_form" model="ir.ui.view">
        <field name="name">settle.shipping.form</field>
        <field name="model">panexlogi.settle.shipping</field>
        <field name="arch" type="xml">
            <form string="Settle Shipping">
                <header>
                    <button name="action_confirm_order"
                            type="object"
                            string="Confirm"
                            invisible="state == 'confirm' or state == 'cancel'"
                            class="btn-danger"/>
                    <button name="action_unconfirm_order"
                            type="object"
                            string="Unconfirm"
                            invisible="state == 'new' or state == 'cancel'"
                            class="btn-primary"/>
                    <button name="action_cancel_order"
                            type="object"
                            string="Cancel"
                            invisible="state == 'confirm' or state == 'cancel'"
                            class="btn-warning"/>
                    <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="new,confirm"/>
                    <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="get_shipping_detail"
                                    type="object"
                                    string="Get Details"
                                    confirm="Are you sure you want to delete and refresh the details?"
                                    context="{'save_self': True}"
                                    class="oe_stat_button" icon="fa-money"
                                    invisible="state!='new'"/>
                            <button name="print_detail_to_excel"
                                type="object"
                                string="Output Details"
                                confirm="Are you sure you want to output details into Excel?"
                                context="{'save_self': True}"
                                class="oe_stat_button" icon="fa-file-excel-o"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            Settle Shipping
                        </h1>
                        <h2>
                            <field name="billno"/>
                        </h2>
                    </div>
                    <group col="2">
                        <group col="2" string="Main">
                            <field name="period" readonly="state!='new'"/>
                            <field name="start_date" readonly="state!='new'"/>
                            <field name="end_date" readonly="state!='new'"/>
                            <field name="date_type" readonly="state!='new'"/>
                            <field name="project" readonly="state!='new'"/>
                            <field name="remark" readonly="state!='new'"/>
                        </group>
                        <group col="2" string="Info">
                            <field name="pdffile" filename="pdffilename" widget="binary_filename"/>
                            <field name="pdffilename" invisible="1"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="total_amount_usd" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="settle_shipping_detail_ids" readonly="state!='new'">
                                <tree editable="bottom">
                                    <field name="invoice_id"/>
                                    <field name="invoiceno"/>
                                    <field name="invoice_date"/>
                                    <field name="due_date"/>
                                    <field name="payment_id"/>
                                    <field name="pay_date"/>
                                    <field name="waybill_id"/>
                                    <field name="jobno"/>
                                    <field name="waybillno"/>
                                    <field name="Container"/>
                                    <field name="shipping"/>
                                    <field name="container_qty"/>
                                    <field name="fitem"/>
                                    <field name="fitem_name"/>
                                    <field name="amount"/>
                                    <field name="amount_usd"/>
                                    <field name="remark"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Outputs logs">
                            <field name="settle_shipping_output_ids" readonly="1">
                                <tree>
                                    <field name="description"/>
                                    <field name="excel_file" filename="excel_filename" widget="binary_filename"/>
                                    <field name="excel_filename" invisible="1" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_settle_shipping_tree" model="ir.ui.view">
        <field name="name">settle.shipping.tree</field>
        <field name="model">panexlogi.settle.shipping</field>
        <field name="arch" type="xml">
            <tree string="Settle Shipping"
                  decoration-success="state=='confirm'" decoration-info="state=='new'"  decoration-danger="state=='cancel'"
                  limit="50">
                <field name="billno" optional="show"/>
                <field name="period" optional="show"/>
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
                <field name="project" optional="show"/>
                <field name="state" optional="show"/>
                <field name="total_amount" optional="show"/>
                <field name="total_amount_usd" optional="show"/>
                <field name="pdffile" filename="pdffilename" widget="binary_filename"/>
                <field name="pdffilename" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_settle_shipping_search" model="ir.ui.view">
        <field name="name">settle.shipping.search</field>
        <field name="model">panexlogi.settle.shipping</field>
        <field name="arch" type="xml">
            <search string="Settle Shipping">
                <field name="billno"/>
                <field name="period"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="project"/>
                <field name="state"/>
                <field name="total_amount"/>
            </search>
        </field>
    </record>
    <!--Output Form View -->
    <record id="view_settle_shipping_output_form" model="ir.ui.view">
        <field name="name">settle.shipping.output.form</field>
        <field name="model">panexlogi.settle.shipping.output</field>
        <field name="arch" type="xml">
            <form string="Settle Shipping Output">
                <sheet>
                    <group>
                        <field name="settle_clearance_id"/>
                        <field name="description"/>
                        <field name="excel_file" filename="excel_filename" widget="binary"/>
                        <field name="excel_filename"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_settle_shipping" model="ir.actions.act_window">
        <field name="name">Settle Shipping</field>
        <field name="res_model">panexlogi.settle.shipping</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_settle_shipping_tree"/>
        <field name="search_view_id" ref="view_settle_shipping_search"/>
    </record>

</odoo>