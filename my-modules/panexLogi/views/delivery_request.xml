                    <field name="load_contact_phone"/>
                    <field name="load_postcode"/>
                    <field name="load_country"/>
                    <field name="load_country_code"/>
                    <field name="load_address_timeslot"/>
                    <field name="unload_address"/>
                    <field name="unload_company_name"/>
                    <field name="unload_contact_phone"/>
                    <field name="unload_postcode"/>
                    <field name="unload_country"/>
                    <field name="unload_country_code"/>
                    <field name="delivery_address_timeslot"/>
                    <field name="delivery_type"/>
                    <field name="loading_conditon"/>
                    <field name="unloading_conditon"/>
                    <field name="package_type"/>
                    <field name="package_size"/>
                    <field name="qty"/>
                    <field name="weight_per_unit"/>
                    <field name="gross_weight"/>
                    <field name="name_of_the_goods"/>
                    <field name="uncode_class"/>
                    <field name="quote"/>
                    <field name="charged"/>
                    <field name="profit"/>
                    <field name="trucker"/>
                    <field name="planned_for_loading"/>
                    <field name="loading_date"/>
                    <field name="delivery_date"/>
                    <field name="extra_cost"/>
                    <field name="notes"/>
                </search>
            </field>
        </record>
    <!--Tree(List) View-->
    <record id="delivery_view_tree" model="ir.ui.view">
        <field name="name">delivery.tree</field>
        <field name="model">panexlogi.delivery</field>
        <field name="arch" type="xml">
            <tree>
                <field name="billno"/>
