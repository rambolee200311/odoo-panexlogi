<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_delivery_form" model="ir.ui.view">
        <field name="name">jsdemo.delivery.form</field>
        <field name="model">jsdemo.delivery</field>
        <field name="arch" type="xml">

            <form>
                <button name="add_line" string="Add Line" type="object" class="oe_stat_button" icon="fa-money"/>
                <header>
                    <button name="add_line" string="Add Line" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group string="Main">
                        <field name="date"/>
                        <field name="project"/>
                        <field name="remark"/>
                       <!-- <field name="price"/>
                        <field name="trucker"/>-->
                    </group>
                    <notebook>
                        <page string="Delivery Lines">
                            <field name="delivery_line_ids" readonly="true">
                                <tree decoration-success="state == 'approve'" decoration-danger="state == 'decline'">
                                    <field name="date"/>
                                    <field name="price"/>
                                    <field name="trucker"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_delivery_tree" model="ir.ui.view">
        <field name="name">jsdemo.delivery.tree</field>
        <field name="model">jsdemo.delivery</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="project"/>
                <field name="price"/>
                <field name="trucker"/>
            </tree>
        </field>
    </record>
</odoo>