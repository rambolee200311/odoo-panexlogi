<odoo>
    <record id="view_delieveryline_form" model="ir.ui.view">
        <field name="name">delieveryline_form</field>
        <field name="model">jsdemo.deliveryline</field>
        <field name="priority" eval="102"/>
        <field name="arch" type="xml">
            <form string="Quotation">
                <group>
                    <field name="date"/>
                    <field name="price"/>
                    <field name="trucker"/>
                </group>
                <footer>
                    <button name="btn_approve" string="Approve" type="object" class="btn-primary"/>
                    <button name="btn_decline" string="Decline" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="view_delieveryline_tree" model="ir.ui.view">
        <field name="name">delieveryline_tree</field>
        <field name="model">jsdemo.deliveryline</field>
        <field name="priority" eval="101"/>
        <field name="arch" type="xml">
            <tree string="Quotation" decoration-success="state == 'approve'" decoration-danger="state == 'decline'">
                <field name="date"/>
                <field name="price"/>
                <field name="trucker"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_class_add_delieveryline_form" model="ir.ui.view">
        <field name="name">addquotation</field>
        <field name="model">jsdemo.deliveryline.wizard</field>
        <field name="priority" eval="101"/>
        <field name="arch" type="xml">
            <form string="Quotation">
                <group>
                    <field name="date"/>
                    <field name="price"/>
                    <field name="trucker"/>
                </group>
                <footer>
                    <button name="add_line" string="确认" type="object" class="btn-primary"/>
                    <button string="取消" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_add_deliveryline" model="ir.actions.act_window">
        <field name="name">addquotation</field>
        <field name="res_model">jsdemo.delivery</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="view_id" ref="view_class_add_delieveryline_form"/>
    </record>
</odoo>